{
  "private": true,
  "description": "Monorepo for Boundary UIs and addons.",
  "license": "BUSL-1.1",
  "author": "HashiCorp",
  "scripts": {
    "build": "pnpm build:ui:admin",
    "build:ui:admin": "pnpm --filter admin build",
    "build:ui:admin:oss": "pnpm --filter admin build:oss",
    "build:ui:admin:enterprise": "pnpm --filter admin build:enterprise",
    "build:ui:admin:hcp": "pnpm --filter admin build:hcp",
    "build:ui:desktop": "pnpm --filter desktop build",
    "build:ui:desktop:production": "pnpm --filter desktop build:production",
    "build:ui:desktop:app": "pnpm --filter desktop build:desktop",
    "lint": "pnpm run /lint:.*/",
    "lint:addons-api": "pnpm --filter api lint",
    "lint:addons-auth": "pnpm --filter auth lint",
    "lint:addons-core": "pnpm --filter core lint",
    "lint:addons-rose": "pnpm --filter rose lint",
    "lint:ui-admin": "pnpm --filter admin lint",
    "lint:ui-desktop": "pnpm --filter desktop lint",
    "test": "pnpm run /test:.*/",
    "test:addons-api": "pnpm --filter api test",
    "test:addons-auth": "pnpm --filter auth test",
    "test:addons-core": "pnpm --filter core test",
    "test:addons-rose": "pnpm --filter rose test",
    "test:ui-admin": "pnpm --filter admin test",
    "test:ui-desktop": "pnpm --filter desktop test",
    "compliance:licenses": "license-checker --onlyAllow 'Apache*;Apache License, Version 2.0;Apache-2.0;Apache 2.0;Artistic-2.0;BSD;BSD-3-Clause;CC-BY-3.0;CC-BY-4.0;CC0-1.0;ISC;MIT;MPL-2.0;BUSL-1.1;Public Domain;Python-2.0;Unicode-TOU;Unlicense;WTFPL;BlueOak-1.0.0' --excludePackages 'boundary-ui;admin@0.0.0;desktop@0.0.0;e2e-tests@0.0.0;cycle@1.0.3;cldr-core@47.0.0;make-plural@7.2.0;@hashicorp/ember-asciinema-player@0.0.0;path-scurry@1.10.1'",
    "doc:toc": "doctoc README.md",
    "prepare": "husky"
  },
  "devDependencies": {
    "doctoc": "^2.2.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.6",
    "license-checker": "^25.0.1",
    "lint-staged": "^15.2.10"
  },
  "pnpm": {
    "overrides": {
      "nomnom>underscore": "^1.12.1",
      "@hashicorp/design-system-components>ember-stargate": "^0.6.0",
      "micromatch": "^4.0.8",
      "css-select>nth-check": "^2.0.1",
      "node-gyp": "^10.0.0",
      "ansi-html": "^0.0.9",
      "fireworm>async": "^2.6.4"
    }
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "engines": {
    "node": "20.* || 22.*"
  }
}
