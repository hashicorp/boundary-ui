<div class='filters-applied'>
  <Hds::Text::Display @size='100' @weight='medium' @color='faint'>{{t
      'titles.filters-applied'
    }}</Hds::Text::Display>
  {{#each this.filters as |filter|}}
    <Hds::Tag
      @text={{filter.name}}
      @onDismiss={{fn this.removeFilter filter}}
    />
  {{/each}}
  <Hds::Button
    @text={{t 'actions.clear-filters'}}
    @color='tertiary'
    @icon='x'
    @size='small'
    {{on 'click' this.clearAllFilters}}
  />
</div>