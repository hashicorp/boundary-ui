<Hds::ApplicationState data-test-error-application-state as |A|>
  <A.Header
    @title={{t (concat 'errors.' this.messageCode '.title')}}
    @icon={{this.icon}}
    @errorCode={{@status}}
  />
  <A.Body @text={{t (concat 'errors.' this.messageCode '.description')}} />
  {{#if @docLink}}
    <A.Footer as |F|>
      <F.LinkStandalone
        @icon='help'
        @text={{t 'actions.help'}}
        @href={{@docLink}}
        @iconPosition='trailing'
      />
    </A.Footer>
  {{/if}}
</Hds::ApplicationState>