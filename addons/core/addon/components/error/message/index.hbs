<Rose::Message
  @title={{t (concat 'errors.' this.messageCode '.title')}}
  @subtitle={{concat (t 'errors.generic.title') ' ' @status}}
  @icon={{this.icon}}
  as |message|
>
  <message.description>
    {{t (concat 'errors.' this.messageCode '.description')}}
  </message.description>
  {{#if this.helpRoute}}
    <message.link @route={{this.helpRoute}}>{{t 'actions.help'}}</message.link>
  {{/if}}
</Rose::Message>