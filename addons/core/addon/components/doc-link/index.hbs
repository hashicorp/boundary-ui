{{#if @hds}}
  <Hds::Interactive
    class='doc-link'
    target='_blank'
    rel='noreferrer noopener'
    title={{t 'actions.get-topic-help'}}
    @href={{(doc-url @doc)}}
  >
    <FlightIcon @name='help' @size='24' />
  </Hds::Interactive>
{{else}}
  <a
    class='doc-link'
    href={{(doc-url @doc)}}
    target='_blank'
    rel='noreferrer noopener'
    title={{t 'actions.get-topic-help'}}
  >
    <Rose::Icon @name='flight-icons/svg/help-24' @size={{@iconSize}} />
  </a>
{{/if}}