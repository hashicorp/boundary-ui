<Rose::Form
  class='full-width'
  @onSubmit={{fn
    this.submit
    @onSubmit
    (hash identification=this.identification password=this.password)
  }}
  @disabled={{@disabled}}
  as |form|
>
  <Hds::Form::TextInput::Field
    name='identification'
    @value={{this.identification}}
    @type='text'
    {{on 'input' (set-from-event this 'identification')}}
    as |F|
  >
    <F.Label>{{t 'form.login_name.label'}}</F.Label>
  </Hds::Form::TextInput::Field>

  <Hds::Form::TextInput::Field
    name='password'
    @value={{this.password}}
    @type='password'
    {{on 'input' (set-from-event this 'password')}}
    as |F|
  >
    <F.Label>{{t 'form.password.label'}}</F.Label>
  </Hds::Form::TextInput::Field>

  <form.actions>
    <:actions>
      <Hds::Button
        @text={{t 'actions.authenticate'}}
        @isFullWidth={{true}}
        disabled={{form.disabled}}
        type='submit'
      />
    </:actions>
  </form.actions>
</Rose::Form>