<Rose::Form
  class='full-width'
  @onSubmit={{@onSubmit}}
  @disabled={{@disabled}}
  as |form|
>
  <form.actions>
    <:actions>
      <Hds::Button
        @text={{t 'actions.authenticate'}}
        @isFullWidth={{true}}
        disabled={{form.disabled}}
        type='submit'
      />
    </:actions>
  </form.actions>
</Rose::Form>