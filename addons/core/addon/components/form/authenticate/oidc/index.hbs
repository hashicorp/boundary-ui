<Rose::Form
  class='full-width'
  @onSubmit={{@submit}}
  @disabled={{@disabled}}
  as |form|
>
  <form.actions>
    <:actions as |A|>
      <Hds::Button
        @text={{t 'actions.authenticate'}}
        @isFullWidth={{true}}
        disabled={{A.submitDisabled}}
        type='submit'
      />
    </:actions>
  </form.actions>
</Rose::Form>