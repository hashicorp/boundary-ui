{
  "name": "rose",
  "version": "0.0.0",
  "description": "Styles and components for Boundary.",
  "license": "BUSL-1.1",
  "author": "HashiCorp",
  "keywords": [
    "ember-addon"
  ],
  "scripts": {
    "build:development": "ember build",
    "build": "ember build --environment=production",
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\"",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sass": "stylelint 'app/styles/**/*.scss'",
    "lint:sass:fix": "stylelint 'app/styles/**/*.scss' --fix",
    "format": "concurrently \"npm:format:*\" --names \"format:\"",
    "format:hbs": "prettier --write '{addon,tests}/**/*.hbs'",
    "format:js": "prettier --write '{addon,app,config,stories,tests}/**/*.js' *.js",
    "format:sass": "prettier --write '{addon,app}/**/*.scss'",
    "start": "ember serve",
    "test": "ember exam --test-port 0 --split=4 --parallel=1 --random",
    "test:ember-compatibility": "ember try:each",
    "precommit": "pnpm lint && pnpm format && pnpm test",
    "doc:toc": "doctoc README.md"
  },
  "dependencies": {
    "@babel/core": "^7.26.10",
    "@hashicorp/design-system-components": "github:hashicorp/design-system#testing-4.21.1",
    "@hashicorp/design-system-tokens": "github:hashicorp/design-system#testing-4.21.1",
    "@hashicorp/flight-icons": "^3.10.0",
    "@nullvoxpopuli/ember-composable-helpers": "^5.2.10",
    "codemirror": "5.65.7",
    "ember-auto-import": "^2.10.0",
    "ember-cli-babel": "^8.2.0",
    "ember-cli-clipboard": "^1.2.1",
    "ember-cli-htmlbars": "^6.3.0",
    "ember-cli-sass": "^11.0.1",
    "ember-focus-trap": "^1.0.1",
    "ember-named-blocks-polyfill": "^0.2.5",
    "jsonlint": "^1.6.3",
    "sass": "^1.69.5",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.1",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@ember/optional-features": "^2.1.0",
    "@ember/test-helpers": "^5.2.1",
    "@embroider/test-setup": "^4.0.0",
    "@glimmer/component": "^2.0.0",
    "@glimmer/tracking": "^1.1.2",
    "broccoli-asset-rev": "^3.0.0",
    "concurrently": "^9.1.0",
    "doctoc": "^2.2.0",
    "ember-cli": "~5.12.0",
    "ember-cli-clean-css": "^3.0.0",
    "ember-cli-dependency-checker": "^3.3.2",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-element-helper": "^0.8.7",
    "ember-exam": "^8.0.0",
    "ember-inline-svg": "^1.0.1",
    "ember-load-initializers": "^2.1.2",
    "ember-maybe-import-regenerator": "^1.0.0",
    "ember-modifier": "^3.2.7",
    "ember-page-title": "^8.2.3",
    "ember-qunit": "^8.1.0",
    "ember-resolver": "^12.0.1",
    "ember-source": "~5.12.0",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^6.0.0",
    "ember-template-lint-plugin-prettier": "^5.0.0",
    "ember-try": "^3.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ember": "^12.2.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-qunit": "^8.1.2",
    "loader.js": "^4.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.3.3",
    "qunit": "^2.22.0",
    "qunit-dom": "^3.2.1",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^11.0.0",
    "webpack": "^5.95.0"
  },
  "peerDependencies": {
    "ember-source": ">= 4.0.0"
  },
  "engines": {
    "node": "20.* || 22.*"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.hbs": "ember-template-lint --fix",
    "*.scss": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{mdx,yaml}": "prettier --write"
  }
}
