<Hds::ButtonSet class='rose-form-actions' ...attributes>
  {{#if (has-block 'actions')}}
    {{yield to='actions'}}
  {{else}}
    <Hds::Button
      @text={{@submitText}}
      disabled={{@submitDisabled}}
      type='submit'
    />
    {{#if this.showCancel}}
      <Hds::Button
        @text={{@cancelText}}
        @color='secondary'
        disabled={{@cancelDisabled}}
        {{on 'click' @cancel}}
      />
    {{/if}}
  {{/if}}
</Hds::ButtonSet>