<Hds::ButtonSet class='rose-form-actions'>
  <Hds::Button
    @text={{@submitText}}
    @isFullWidth={{@submitIsFullWidth}}
    disabled={{@submitDisabled}}
    type='submit'
  />
  {{#if this.showCancel}}
    <Hds::Button
      @text={{@cancelText}}
      @color='secondary'
      disabled={{@cancelDisabled}}
      type='button'
      {{on 'click' @cancel}}
    />
  {{/if}}
</Hds::ButtonSet>