<LinkTo
  ...attributes
  class='rose-header-brand'
  title={{@text}}
  @route={{if @route @route 'index'}}
>

  {{#if @logo}}
    {{inline-svg @logo}}
  {{/if}}

  {{#if @text}}
    <Hds::Text::Display
      @tag='h1'
      class='rose-header-brand-text'
    >{{@text}}</Hds::Text::Display>
  {{/if}}

</LinkTo>