<Rose::Layout::Global as |layout|>
  <layout.header>
    <Rose::Header as |header|>

      <header.brand @logo="logo" @text="Product Name" />

      <header.nav as |nav|>
        <nav.dropdown @text="org-name" as |dropdown|>
          <dropdown.link @route="index">Menu item</dropdown.link>
          <dropdown.link @route="about">Menu item</dropdown.link>
          <dropdown.button>Button menu item</dropdown.button>
        </nav.dropdown>
        <nav.link @route="index">Section</nav.link>
        <nav.link @route="about">Section</nav.link>
      </header.nav>


      <header.utilities as |utilities|>
        <utilities.dropdown
          @text="user@example.net"
          @iconOnly={{true}}
          @icon="user-square-fill" as |dropdown|
        >
          <dropdown.link @route="index">Menu item</dropdown.link>
          <dropdown.link @route="about">Menu item</dropdown.link>
          <dropdown.button>Button menu item</dropdown.button>
        </utilities.dropdown>
      </header.utilities>

    </Rose::Header>
  </layout.header>

  <layout.sidebar>
    <Rose::Nav::Sidebar @title="Title" as |nav|>
      <nav.link @route="index">Item Name</nav.link>
      <nav.link @route="about">Item Name</nav.link>
      <nav.link @route="about">Item Name</nav.link>
      <nav.link @route="about">Item Name</nav.link>
    </Rose::Nav::Sidebar>
  </layout.sidebar>

  <layout.body>
    <Rose::Layout::Page as |page|>
      <page.breadcrumbs>Breadcrumbs</page.breadcrumbs>
      <page.header>Header</page.header>
      <page.navigation>Navigation</page.navigation>
      <page.actions>Actions</page.actions>
      <page.body>Body</page.body>
    </Rose::Layout::Page>

    Dummy app index template

    <Rose::Notification
      @style="error"
      @heading="Error"
      @dismiss={{this.actionHandler}}
      @dismissText="Dismiss"
    >
    An error occurred.
    </Rose::Notification>

    <h2>Icon</h2>
    <Rose::Icon @name="alert-circle-fill" />
    <Rose::Icon @name="alert-circle-fill" @size="medium" />
    <Rose::Icon @name="alert-circle-fill" @size="small" />

    <h2>Button</h2>
    <Rose::Button @style="primary">Primary</Rose::Button>
    <br>
    <Rose::Button @style="primary" @disabled={{true}}>Primary</Rose::Button>
    <br>

    <Rose::Button @style="secondary">Secondary</Rose::Button>
    <br>
    <Rose::Button @style="secondary" @disabled={{true}}>Secondary</Rose::Button>
    <br>

    <h2>Form</h2>
    <Rose::Form
      @onSubmit={{this.actionHandler}}
      @cancel={{this.actionHandler}}
      @disabled={{false}}
      as |form|
    >

      <h3>Inputs</h3>
      <form.input
        @label="Label"
        @value="Read only"
        readonly={{true}}
        />
      <form.input
        @label="Label"
        @helperText="Helper text"
        @value="Text"
        />
      <form.input
        @label="Label"
        @helperText="Helper text"
        @value="Text"
        @error={{true}}
        />
      <form.input
        @label="Label"
        @helperText="Helper text"
        @value="Text"
        disabled={{true}}
        />

      <h3>Textareas</h3>
      <form.textarea
        @label="Label"
        @value="Read only"
        readonly={{true}}
        />
      <form.textarea
        @label="Label"
        @helperText="Helper text"
        @value="Text"
        />
      <form.textarea
        @label="Label"
        @helperText="Helper text"
        @value="Text"
        @error={{true}}
        />
      <form.textarea
        @label="Label"
        @helperText="Helper text"
        @value="Text"
        disabled={{true}}
        />

      <h3>Selects</h3>
      <form.select
        @label="Label"
        @helperText="Helper text"
        @onChange={{fn this.actionHandler}}
        as |field|
      >
        <field.field as |select|>
          <select.option>Choose an option</select.option>
          <select.option @value="value-1">Value 1</select.option>
          <select.option @value="value-2">Value 2</select.option>
          <select.option @value="value-3">Value 3</select.option>
        </field.field>
      </form.select>
      <form.select

        @label="Label"
        @helperText="Helper text"
        @onChange={{fn this.actionHandler}}
        as |field|
      >
        <field.field as |select|>
          <select.option>Choose an option</select.option>
        </field.field>
      </form.select>


      <h3>Radio Group</h3>
      <form.radioGroup @name="color" @selectedValue={{this.color}} as |radioGroup|>
        <radioGroup.radio
          @label="Red"
          @value="red"
        />
        <radioGroup.radio
          @label="Green"
          @value="green"
        />
        <radioGroup.radio
          @label="Blue"
          @value="blue"
          @disabled={{true}}
        />
      </form.radioGroup>

      <h3>Checkboxes</h3>
      <form.checkbox
        @label="Label"
        />
      <form.checkbox
        @error={{true}}
        @label="Error"
        />
      <form.checkbox
        @checked={{true}}
        @label="Checked"
        />
      <form.checkbox
        @label="Disabled"
        disabled={{true}}
        />
      <form.checkbox
        @checked={{true}}
        @label="Disabled + Checked"
        disabled={{true}}
        />

      <form.actions
        @submitText="Save"
        @cancelText="Cancel" />
    </Rose::Form>

    <Rose::Card::Link @title="I'm a card" />
    <Rose::Card::Link @title="I'm a card" @description="I'm a description" />
    <Rose::Card::Link @title="I'm a card" @description="I'm a description" @subtitle="I'm a subtitle"/>

    <Rose::Table as |table|>
      <table.header as |header|>
        <header.row as |row|>
          <row.cell>Address</row.cell>
          <row.cell>Host Set</row.cell>
          <row.cell>Name</row.cell>
          <row.cell>Description</row.cell>
        </header.row>
      </table.header>
      <table.body as |body|>
        <body.row as |row|>
          <row.cell>1.1.1.1</row.cell>
          <row.cell>host-set-1, host-set-2</row.cell>
          <row.cell>optional name</row.cell>
          <row.cell>description</row.cell>
        </body.row>
      </table.body>
      <table.footer as |footer|>
        <footer.row as |row|>
          <row.cell>Footer</row.cell>
        </footer.row>
      </table.footer>
    </Rose::Table>

    <Rose::Nav::Breadcrumbs as |breadcrumbs|>
      <breadcrumbs.link @route="about">Level 1</breadcrumbs.link>
      <breadcrumbs.link @route="index">Level 2</breadcrumbs.link>
      <breadcrumbs.link @route="about">Level 3</breadcrumbs.link>
      <breadcrumbs.link @route="about">Level 4</breadcrumbs.link>
      <breadcrumbs.link @route="about">Level 5</breadcrumbs.link>
    </Rose::Nav::Breadcrumbs>

    <Rose::Message @title="You are not authorized" @subtitle="Error 403" @icon="disabled" as |message|>
      <message.description>
        You must be granted permissions to view this data.
        Ask your administrator if you think you should have access.
      </message.description>
      <message.link @route="index">
        <Rose::Icon @name="chevron-left" />
        Go back
      </message.link>
      <message.link @route="index">Need help?</message.link>
    </Rose::Message>

    <Rose::Message @title="Page Not Found" @subtitle="Error 404" @icon="help-circle-outline" as |message|>
      <message.description>
        Sorry, we couldn't find the page you were looking for. You can go back or to one of the links below.
      </message.description>
      <message.link @route="index">
        <Rose::Icon @name="chevron-left" />
        Go back
      </message.link>
      <message.link @route="index">Need help?</message.link>
    </Rose::Message>

    <Rose::Message @title="Something went wrong" @subtitle="Error 500" @icon="alert-circle-outline" as |message|>
      <message.description>
        We ran into a problem and could not continue. You can ask your administrator or try again later.
      </message.description>
      <message.link @route="index">
        <Rose::Icon @name="refresh-default" />
        Try Again
      </message.link>
      <message.link @route="index">Need help?</message.link>
    </Rose::Message>

    <Rose::Message @title="No logs received yet" as |message|>
      <message.description>
        Your logs will appear here when we start receiving them. If your server is currently outputting logs, check your configuration.
      </message.description>
    </Rose::Message>

    <Rose::Message @title="Welcome to Namespaces" as |message|>
      <message.description>
        Namespaces allow you to create distinct areas with their own separate policies, mounts, tokens, and identity entities.
      </message.description>
      <message.link @route="index">Add a namespace</message.link>
    </Rose::Message>

    <Rose::Layout::Centered>
      <Rose::Message @title="Welcome to Namespaces" as |message|>
        <message.description>
          Namespaces allow you to create distinct areas with their own separate policies, mounts, tokens, and identity entities.
        </message.description>
        <message.link @route="index">Add a namespace</message.link>
      </Rose::Message>
    </Rose::Layout::Centered>
  </layout.body>
</Rose::Layout::Global>
