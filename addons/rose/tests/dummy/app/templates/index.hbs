<Rose::Form::List @label="I am a list" as |list|>
  <list.item as |item|>
    <item.cell>Value</item.cell>
  </list.item>
  <Rose::Form::Input @contextual={{true}} as |input|>
    <list.item as |item|>
      <item.cell>
        <input.field />
      </item.cell>
    </list.item>
    <list.item as |item|>
      <item.cell>
        <input.field />
      </item.cell>
      <item.cell>
        <Rose::Button @style="secondary" @iconOnly="trash" title="Remove">Remove</Rose::Button>
      </item.cell>
    </list.item>
  </Rose::Form::Input>
</Rose::Form::List>
