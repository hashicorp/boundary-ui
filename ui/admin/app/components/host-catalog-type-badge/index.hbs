{{#if @model.isStatic}}
  <Hds::Badge
    @text={{t (concat 'resources.host-catalog.types.' @model.compositeType)}}
  />
{{else if @model.isUnknown}}
  <Hds::Badge
    @text={{t (concat 'resources.host-catalog.types.' @model.compositeType)}}
  />

{{else}}
  <Hds::Badge
    @icon={{concat @model.compositeType '-color'}}
    @text={{t (concat 'resources.host-catalog.types.' @model.compositeType)}}
  />
{{/if}}