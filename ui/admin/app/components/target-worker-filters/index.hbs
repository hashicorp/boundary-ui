<div class='target-worker-filters'>
  <Hds::Form::Toggle::Field
    name='target-worker-filter-toggle'
    disabled={{@disabled}}
    checked={{@checked}}
    {{on 'change' @toggleAction}}
    as |F|
  >
    <F.Label>{{t (concat 'resources.target.workers.' @name '.title')}}</F.Label>
    <F.HelperText>{{t
        (concat 'resources.target.workers.' @name '.description')
      }}</F.HelperText>
  </Hds::Form::Toggle::Field>

  {{#if @toggleEnabled}}
    <Hds::Form::TextInput::Field
      disabled={{@disabled}}
      @value={{@value}}
      @isInvalid={{@errors}}
      @type='text'
      name={{@name}}
      {{on 'input' (set-from-event @model @name)}}
      as |F|
    >
      <F.Label>{{t
          (concat 'resources.target.workers.' @name '.filter.title')
        }}</F.Label>
      <F.HelperText>{{t
          (concat 'resources.target.workers.' @name '.filter.description')
        }}
        <Hds::Link::Inline @href={{doc-url 'target.boolean-expression'}}>
          {{t 'actions.learn-more'}}
        </Hds::Link::Inline>
      </F.HelperText>
      {{#if @errors}}
        <F.Error as |E|>
          {{#each @errors as |error|}}
            <E.Message>{{error.message}}</E.Message>
          {{/each}}
        </F.Error>
      {{/if}}
    </Hds::Form::TextInput::Field>

  {{/if}}
</div>