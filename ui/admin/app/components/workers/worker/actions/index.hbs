<Rose::Dropdown
  @text={{t 'actions.manage'}}
  @dropdownRight={{true}}
  as |dropdown|
>
  {{#if (can 'delete worker' @model)}}
    <dropdown.button
      @style='danger'
      @disabled={{@model.canSave}}
      {{on 'click' (fn @delete @model)}}
    >
      {{t 'resources.worker.actions.delete'}}
    </dropdown.button>
  {{/if}}
</Rose::Dropdown>