{{#if (can 'delete model' @model)}}
  <Rose::Dropdown
    @text={{t 'actions.manage'}}
    @dropdownRight={{true}}
    as |dropdown|
  >
    <dropdown.button
      @style='danger'
      @disabled={{@model.canSave}}
      {{on 'click' (fn @delete @model)}}
    >
      {{t 'resources.managed-group.actions.delete'}}
    </dropdown.button>
  </Rose::Dropdown>
{{/if}}