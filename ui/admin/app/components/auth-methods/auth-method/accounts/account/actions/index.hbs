{{#if (can 'delete account' @model)}}
  <Hds::Dropdown data-test-manage-account-auth-methods as |dd|>
    <dd.ToggleButton @text={{t 'actions.manage'}} @color='secondary' />
    <dd.Interactive
      @text={{t 'resources.account.actions.delete'}}
      @color='critical'
      {{on 'click' (fn @delete @model)}}
    />
  </Hds::Dropdown>
{{/if}}