<Rose::Form
  @onSubmit={{@submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  @showEditToggle={{if @model.isNew false true}}
  as |form|
>

  <form.input
    @name='name'
    @value={{@model.name}}
    @label={{t 'form.name.label'}}
    @error={{@model.errors.name}}
    @helperText={{t 'form.name.help'}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.name}}
      <field.errors as |errors|>
        {{#each @model.errors.name as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.textarea
    @name='description'
    @value={{@model.description}}
    @label={{t 'form.description.label'}}
    @error={{@model.errors.description}}
    @helperText={{t 'form.description.help'}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.description}}
      <field.errors as |errors|>
        {{#each @model.errors.description as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.textarea>
  {{#if @model.isNew}}
    <form.fieldset>
      <:title>{{t 'form.type.label'}}</:title>
      <:body>
        <form.radioGroup
          @name='types'
          @selectedValue={{@model.type}}
          @changed={{@changeType}}
          as |radioGroup|
        >
          <radioGroup.card
            @label={{t 'resources.credential.types.username_password'}}
            @helperText={{t 'resources.credential.help.username_password'}}
            @value='username_password'
            @layout='wide'
          />
          <radioGroup.card
            @label={{t 'resources.credential.types.ssh_private_key'}}
            @helperText={{t 'resources.credential.help.ssh_private_key'}}
            @value='ssh_private_key'
            @layout='wide'
          />
        </form.radioGroup>
      </:body>
    </form.fieldset>
  {{else}}
    <InfoField
      @value={{t (concat 'resources.credential.help.' @model.type)}}
      as |F|
    >
      <F.Label>{{t 'form.type.label'}}</F.Label>
      <F.HelperText>{{t (concat 'resources.credential.types.' @model.type)}}
      </F.HelperText>
    </InfoField>
  {{/if}}

  <form.input
    @name='username'
    @value={{@model.username}}
    @label={{t 'resources.credential.form.username.label'}}
    @helperText={{t 'resources.credential.form.username.help'}}
    @error={{@model.errors.username}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.username}}
      <field.errors as |errors|>
        {{#each @model.errors.username as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  {{#if (or @model.isNew form.isEditable)}}
    <form.input
      @name='password'
      @type='password'
      @value={{@model.password}}
      @label={{t 'resources.credential.form.password.label'}}
      @helperText={{t 'resources.credential.form.password.help'}}
      @error={{@model.errors.password}}
      disabled={{@model.isSaving}}
      readonly={{false}}
      autocomplete='new-password'
      as |field|
    >
      {{#if @model.errors.password}}
        <field.errors as |errors|>
          {{#each @model.errors.password as |error|}}
            <errors.message>{{error.message}}</errors.message>
          {{/each}}
        </field.errors>
      {{/if}}
    </form.input>
  {{/if}}

  {{#if (can 'save model' @model)}}
    <form.actions
      @enableEditText={{t 'actions.edit-form'}}
      @submitText={{t 'actions.save'}}
      @cancelText={{t 'actions.cancel'}}
    />
  {{/if}}

</Rose::Form>
