<Rose::Form
  @onSubmit={{@submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  @showEditToggle={{if @model.isNew false true}}
  as |form|
>

  <form.input
    @name='name'
    @value={{@model.name}}
    @label={{t 'form.name.label'}}
    @error={{@model.errors.name}}
    @helperText={{t 'form.name.help'}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.name}}
      <field.errors as |errors|>
        {{#each @model.errors.name as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.textarea
    @name='description'
    @value={{@model.description}}
    @label={{t 'form.description.label'}}
    @error={{@model.errors.description}}
    @helperText={{t 'form.description.help'}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.description}}
      <field.errors as |errors|>
        {{#each @model.errors.description as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.textarea>
  {{#if @model.isNew}}
    <Hds::Form::RadioCard::Group @name='types' as |G|>
      <G.Legend>{{t 'form.type.label'}}</G.Legend>
      {{#each @credentialTypes as |credentialType|}}
        <G.RadioCard
          @name={{credentialType}}
          @value={{credentialType}}
          @maxWidth='20rem'
          @checked={{eq credentialType @model.type}}
          {{on 'input' (fn @changeType credentialType)}}
          as |R|
        >
          <R.Label>{{t
              (concat 'resources.credential.types.' credentialType)
            }}</R.Label>
          <R.Description>{{t
              (concat 'resources.credential.help.' credentialType)
            }}</R.Description>
        </G.RadioCard>

      {{/each}}
    </Hds::Form::RadioCard::Group>
    <br />
  {{else}}
    <Hds::Form::RadioCard::Group @name='types' as |G|>
      <G.Legend>{{t 'form.type.label'}}</G.Legend>
      <G.RadioCard
        @name={{@model.type}}
        @value={{@model.type}}
        @maxWidth='20rem'
        @checked={{true}}
        @disabled={{true}}
        as |R|
      >
        <R.Label>{{t
            (concat 'resources.credential.types.' @model.type)
          }}</R.Label>
        <R.Description>{{t
            (concat 'resources.credential.help.' @model.type)
          }}</R.Description>
      </G.RadioCard>
    </Hds::Form::RadioCard::Group>
    <br />
  {{/if}}

  <form.input
    @name='username'
    @value={{@model.username}}
    @label={{t 'resources.credential.form.username.label'}}
    @helperText={{t 'resources.credential.form.username.help'}}
    @error={{@model.errors.username}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.username}}
      <field.errors as |errors|>
        {{#each @model.errors.username as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  {{#if (or @model.isNew form.isEditable)}}
    <form.input
      @name='password'
      @type='password'
      @value={{@model.password}}
      @label={{t 'resources.credential.form.password.label'}}
      @helperText={{t 'resources.credential.form.password.help'}}
      @error={{@model.errors.password}}
      disabled={{@model.isSaving}}
      readonly={{false}}
      autocomplete='new-password'
      as |field|
    >
      {{#if @model.errors.password}}
        <field.errors as |errors|>
          {{#each @model.errors.password as |error|}}
            <errors.message>{{error.message}}</errors.message>
          {{/each}}
        </field.errors>
      {{/if}}
    </form.input>
  {{/if}}

  {{#if (can 'save model' @model)}}
    <form.actions
      @enableEditText={{t 'actions.edit-form'}}
      @submitText={{t 'actions.save'}}
      @cancelText={{t 'actions.cancel'}}
    />
  {{/if}}

</Rose::Form>