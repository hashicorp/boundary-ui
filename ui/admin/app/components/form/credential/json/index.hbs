<Rose::Form
  @onSubmit={{@submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  @showEditToggle={{if @model.isNew false true}}
  as |form|
>

  <form.input
    @name='name'
    @value={{@model.name}}
    @label={{t 'form.name.label'}}
    @error={{@model.errors.name}}
    @helperText={{t 'form.name.help'}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.name}}
      <field.errors as |errors|>
        {{#each @model.errors.name as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.textarea
    @name='description'
    @value={{@model.description}}
    @label={{t 'form.description.label'}}
    @error={{@model.errors.description}}
    @helperText={{t 'form.description.help'}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.description}}
      <field.errors as |errors|>
        {{#each @model.errors.description as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.textarea>

  {{#if @model.isNew}}
    <form.fieldset>
      <:title>{{t 'form.type.label'}}</:title>
      <:body>
        <form.radioGroup
          @name='types'
          @selectedValue={{@model.type}}
          @changed={{@changeType}}
          as |radioGroup|
        >
          <radioGroup.card
            @label={{t 'resources.credential.types.username_password'}}
            @helperText={{t 'resources.credential.help.username_password'}}
            @value='username_password'
            @layout='wide'
          />
          <radioGroup.card
            @label={{t 'resources.credential.types.ssh_private_key'}}
            @helperText={{t 'resources.credential.help.ssh_private_key'}}
            @value='ssh_private_key'
            @layout='wide'
          />
          <radioGroup.card
            @label={{t 'resources.credential.types.json'}}
            @helperText={{t 'resources.credential.help.json'}}
            @value='json'
            @layout='wide'
          />
        </form.radioGroup>
      </:body>
    </form.fieldset>
  {{else}}
    {{! Will be replaced by new InfoField component }}
    <form.fieldset>
      <:title>{{t 'form.type.label'}}</:title>
      <:description>
        <Rose::Form::Label>
          {{t (concat 'resources.credential.types.' @model.type)}}
        </Rose::Form::Label>
      </:description>
      <:body>
        <Rose::Form::HelperText>{{t
            (concat 'resources.credential.help.' @model.type)
          }}</Rose::Form::HelperText>
      </:body>
    </form.fieldset>
  {{/if}}

  {{! Placeholder for json text editor }}
  <form.input
    @name='json'
    @value={{@model.json_object}}
    @label={{t 'resources.credential.form.json.label'}}
    @helperText={{t 'resources.credential.form.json.help'}}
    @error={{@model.errors.json_object}}
    disabled={{@model.isSaving}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.json_object}}
      <field.errors as |errors|>
        {{#each @model.errors.json_object as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  {{#if (can 'save model' @model)}}
    <form.actions
      @enableEditText={{t 'actions.edit-form'}}
      @submitText={{t 'actions.save'}}
      @cancelText={{t 'actions.cancel'}}
    />
  {{/if}}

</Rose::Form>