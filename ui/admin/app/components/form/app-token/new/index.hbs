<Rose::Form
  @onSubmit={{@submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  class='app-token-form'
  as |form|
>
  <Hds::Form::TextInput::Field
    name='name'
    @value={{@model.name}}
    @isInvalid={{@model.errors.name}}
    @isRequired={{true}}
    disabled={{form.disabled}}
    {{on 'input' (set-from-event @model 'name')}}
    as |F|
  >
    <F.Label>{{t 'form.name.label'}}</F.Label>
    <F.HelperText>{{t 'form.name.help'}}</F.HelperText>
    {{#if @model.errors.name}}
      <F.Error as |E|>
        {{#each @model.errors.name as |error|}}
          <E.Message data-test-error-message-name>{{error.message}}</E.Message>
        {{/each}}
      </F.Error>
    {{/if}}
  </Hds::Form::TextInput::Field>

  <Hds::Form::Textarea::Field
    name='description'
    @value={{@model.description}}
    @isInvalid={{@model.errors.description}}
    disabled={{form.disabled}}
    {{on 'input' (set-from-event @model 'description')}}
    as |F|
  >
    <F.Label>{{t 'form.description.label'}}</F.Label>
    <F.HelperText>{{t 'form.description.help'}}</F.HelperText>
    {{#if @model.errors.description}}
      <F.Error as |E|>
        {{#each @model.errors.description as |error|}}
          <E.Message>{{error.message}}</E.Message>
        {{/each}}
      </F.Error>
    {{/if}}
  </Hds::Form::Textarea::Field>

  <InfoField
    @value={{if
      @model.scope.isGlobal
      (t 'resources.global.title')
      @model.scopeModel.displayName
    }}
    @icon={{if
      @model.scope.isGlobal
      'globe'
      (if @model.scope.isOrg 'org' 'grid')
    }}
    readonly={{true}}
    as |F|
  >
    <F.Label>{{t 'resources.app-token.form.root-scope.label'}}</F.Label>
    <F.HelperText>{{t
        'resources.app-token.form.root-scope.help'
      }}</F.HelperText>
  </InfoField>

  <Hds::Separator />

  <VariableTimeField
    name='time_to_live_seconds'
    @legend={{t 'resources.app-token.form.ttl.label.0'}}
    @helperText={{t 'resources.app-token.form.ttl.help'}}
    @isRequired={{true}}
    @time={{@model.time_to_live_seconds}}
    @max={{this.maxTTL}}
    @updateTime={{fn this.updateTime 'time_to_live_seconds'}}
    class='ttl-field'
  />

  <VariableTimeField
    name='time_to_stale_seconds'
    @legend={{t 'resources.app-token.form.tts.label.0'}}
    @helperText={{t 'resources.app-token.form.tts.help'}}
    @updateTime={{fn this.updateTime 'time_to_stale_seconds'}}
  />

  <Hds::Separator />

  <Hds::Form::Field @isRequired={{true}} as |F|>
    <F.Label class='permissions-label'>{{t
        'resources.app-token.form.permissions.label'
      }}</F.Label>
    {{#unless @model.permissions.length}}
      <F.HelperText>{{t
          'resources.app-token.form.permissions.help'
        }}</F.HelperText>
    {{/unless}}
    <F.Control>
      <Hds::Button
        id={{F.id}}
        @text={{t 'resources.app-token.titles.add-permission'}}
        @icon='plus'
        @color='secondary'
        class='margin-top-s'
        data-test-add-permission-button
        {{on 'click' this.openPermissionFlyout}}
      />
    </F.Control>
    {{#if @model.errors.permissions}}
      <F.Error as |E|>
        {{#each @model.errors.permissions as |error|}}
          <E.Message>{{error.message}}</E.Message>
        {{/each}}
      </F.Error>
    {{/if}}
  </Hds::Form::Field>

  {{#if @model.permissions.length}}
    <Hds::Table
      @columns={{array
        (hash label=(t 'titles.label'))
        (hash label=(t 'resources.app-token.titles.grants'))
        (hash
          label=(t 'resources.app-token.titles.active-scopes')
          tooltip=(t 'resources.app-token.messages.tooltips.active-scopes')
        )
        (hash label=(t 'titles.actions'))
      }}
      @model={{@model.permissions}}
      @valign='middle'
      class='margin-top-s'
    >
      <:body as |B|>
        <B.Tr>
          <B.Td>
            <Hds::Text::Body @tag='p'>
              {{~or B.data.label '—'}}
            </Hds::Text::Body>
          </B.Td>
          <B.Td>
            {{#if B.data.grant.length}}
              <Hds::Link::Inline
                @color='secondary'
                @href='#grants-fieldset'
                {{on
                  'click'
                  (fn
                    this.openPermissionFlyoutAndScrollTo
                    B.rowIndex
                    'grants-fieldset'
                  )
                }}
                data-test-grants-count={{B.rowIndex}}
              >
                {{B.data.grant.length}}
              </Hds::Link::Inline>
            {{else}}
              <Hds::Text::Body @tag='p'>—</Hds::Text::Body>
            {{/if}}
          </B.Td>
          <B.Td>
            {{#if B.data.grant_scopes.length}}
              <Hds::Link::Inline
                @href='#scope-options-fieldset'
                @color='secondary'
                {{on
                  'click'
                  (fn
                    this.openPermissionFlyoutAndScrollTo
                    B.rowIndex
                    'scope-options-fieldset'
                  )
                }}
                data-test-active-scopes-count={{B.rowIndex}}
              >
                {{B.data.grant_scopes.length}}
              </Hds::Link::Inline>
            {{else}}
              <Hds::Text::Body @tag='p'>—</Hds::Text::Body>
            {{/if}}
          </B.Td>
          <B.Td>
            <Hds::ButtonSet>
              <Hds::Button
                @text={{t 'actions.edit'}}
                @icon='edit'
                @color='secondary'
                @isIconOnly={{true}}
                {{on 'click' (fn this.editPermission B.rowIndex)}}
              />
              <Hds::Button
                @text={{t 'actions.delete'}}
                @icon='trash'
                @color='critical'
                @isIconOnly={{true}}
                {{on 'click' (fn this.deletePermission B.rowIndex)}}
              />
            </Hds::ButtonSet>
          </B.Td>
        </B.Tr>
      </:body>
    </Hds::Table>
  {{/if}}

  {{#if this.showPermissionFlyout}}
    <Hds::Flyout
      @size='large'
      @onClose={{this.closePermissionFlyout}}
      data-test-permission-flyout
      as |M|
    >
      <M.Header>{{if
          this.editingPermission
          (t 'resources.app-token.titles.edit-permission')
          (t 'resources.app-token.titles.add-permission')
        }}</M.Header>
      <M.Body>
        <Hds::Form::TextInput::Field
          name='permission-label'
          @value={{this.selectedPermission.label}}
          {{on 'input' (set-from-event this.selectedPermission 'label')}}
          as |F|
        >
          <F.Label>{{t 'titles.label'}}</F.Label>
          <F.HelperText>{{t
              'resources.app-token.form.permission.help'
            }}</F.HelperText>
        </Hds::Form::TextInput::Field>

        <Hds::Form::Fieldset
          @isRequired={{not @model.scope.isProject}}
          id='scope-options-fieldset'
          as |F|
        >
          <F.Legend>{{if
              @model.scope.isProject
              (t 'resources.app-token.form.scope.label')
              (t 'form.scope-options.label')
            }}</F.Legend>
          {{#if @model.scope.isProject}}
            <F.HelperText>{{t
                'resources.app-token.form.scope.project-scope.help'
              }}</F.HelperText>
          {{else}}
            <F.HelperText>{{t 'form.scope-options.help'}}</F.HelperText>
          {{/if}}
          <F.Control>
            <ScopeOptions
              @model={{@model}}
              @field={{this.selectedPermission}}
              @name='grant_scopes'
            />
          </F.Control>
        </Hds::Form::Fieldset>

        <Hds::Separator />

        <Hds::Form::KeyValueInputs
          @isRequired={{true}}
          @data={{this.selectedPermission.grant}}
          id='grants-fieldset'
          class='grant-list'
        >
          <:header as |H|>
            <H.Legend>{{t 'resources.role.grant.title_plural'}}</H.Legend>
          </:header>
          <:row as |R|>
            <R.Field as |Field|>
              <Field.TextInput
                name={{concat 'grant-' R.rowIndex}}
                title={{t 'form.grant.help'}}
                @value={{R.rowData.value}}
                {{on 'input' (fn this.updateGrant R.rowData)}}
                data-test-grant-input
              />
            </R.Field>
            {{#if this.canDeleteGrant}}
              <R.DeleteRowButton
                @text={{t 'actions.remove'}}
                @onClick={{fn this.removeGrant R.rowData}}
                data-test-delete-grant-button
              />
            {{/if}}
          </:row>
          <:footer as |Footer|>
            <Footer.AddRowButton
              @text={{t 'actions.add'}}
              @onClick={{this.addGrant}}
              data-test-add-grant-button
            />
          </:footer>
        </Hds::Form::KeyValueInputs>

      </M.Body>
      <M.Footer>
        <Hds::ButtonSet>
          {{#if this.editingPermission}}
            <Hds::Button
              @text={{t 'actions.save'}}
              {{on 'click' this.savePermission}}
              data-test-save-permission-button
            />
          {{else}}
            <Hds::Button
              @text={{t 'actions.add'}}
              {{on 'click' this.addPermission}}
              data-test-add-permission-flyout-button
            />
          {{/if}}
          <Hds::Button
            @text={{t 'actions.cancel'}}
            @color='secondary'
            {{on 'click' this.closePermissionFlyout}}
            data-test-cancel-permission-button
          />
        </Hds::ButtonSet>
      </M.Footer>
    </Hds::Flyout>
  {{/if}}

  {{#if (can 'save model' @model)}}
    <Hds::Layout::Flex @gap='16' class='margin-top-l'>
      <form.actions
        @submitText={{t 'actions.create'}}
        @cancelText={{t 'actions.cancel'}}
      />
      <Hds::Alert
        @type='compact'
        @icon='alert-triangle-fill'
        @color='warning'
        as |A|
      >
        <A.Description>{{t
            'resources.app-token.messages.create.description'
          }}</A.Description>
      </Hds::Alert>
    </Hds::Layout::Flex>
  {{/if}}
</Rose::Form>