<Rose::Form
  @edit={{@edit}}
  @onSubmit={{@submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  @showEditToggle={{if @model.isNew false true}}
  as |form|
>

  <form.input
    @value={{@model.type}}
    @label={{t 'form.type.label'}}
    readonly={{true}}
    @disabled={{true}}
  />

  <form.input
    @name='name'
    @type='text'
    @value={{@model.name}}
    @label={{t 'form.name.label'}}
    @helperText={{t 'form.name.help'}}
    @error={{@model.errors.name}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.name}}
      <field.errors as |errors|>
        {{#each @model.errors.name as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <Hds::Form::Textarea::Field
    @isOptional={{true}}
    @value={{@model.description}}
    @isInvalid={{@model.errors.description}}
    name='description'
    disabled={{form.disabled}}
    as |F|
  >
    <F.Label>{{t 'form.description.label'}}</F.Label>
    <F.HelperText>{{t 'form.description.help'}}</F.HelperText>
    {{#if @model.errors.description}}
      <F.Error as |E|>
        {{#each @model.errors.description as |error|}}
          <E.Message>{{error.message}}</E.Message>
        {{/each}}
      </F.Error>
    {{/if}}
  </Hds::Form::Textarea::Field>

  <form.input
    @name='issuer'
    @type='text'
    @value={{@model.issuer}}
    @label={{t 'form.issuer.label'}}
    @helperText={{t 'form.issuer.help'}}
    @error={{@model.errors.issuer}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.issuer}}
      <field.errors as |errors|>
        {{#each @model.errors.issuer as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <Hds::Form::Checkbox::Field
    name='disable_discovered_config_validation'
    checked={{@model.disable_discovered_config_validation}}
    disabled={{form.disabled}}
    {{on
      'change'
      (fn
        (mut @model.disable_discovered_config_validation)
        (if @model.disable_discovered_config_validation false true)
      )
    }}
    as |F|
  >
    <F.Label>{{t 'form.disable_discovered_config_validation.label'}}</F.Label>
    <F.HelperText>
      {{t 'form.disable_discovered_config_validation.help'}}
    </F.HelperText>
  </Hds::Form::Checkbox::Field>

  <form.input
    @name='client_id'
    @type='text'
    @value={{@model.client_id}}
    @label={{t 'form.client_id.label'}}
    @helperText={{t 'form.client_id.help'}}
    @error={{@model.errors.client_id}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.client_id}}
      <field.errors as |errors|>
        {{#each @model.errors.client_id as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.input
    @name='client_secret'
    @type='password'
    @value={{@model.client_secret}}
    @label={{t 'form.client_secret.label'}}
    @helperText={{t 'form.client_secret.help'}}
    @error={{@model.errors.client_secret}}
    readonly={{false}}
    @hasVisibilityToggle={{false}}
    as |field|
  >
    {{#if @model.errors.client_secret}}
      <field.errors as |errors|>
        {{#each @model.errors.client_secret as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  {{#unless @model.isNew}}
    <form.input
      @value={{@model.client_secret_hmac}}
      @label={{t 'form.client_secret_hmac.label'}}
      readonly={{true}}
      @disabled={{true}}
    />
  {{/unless}}

  {{! Signing Algorithms }}
  <Rose::Form::Fieldset>
    <:title>{{t 'form.signing_algorithms.label'}}</:title>
    <:description>{{t 'form.signing_algorithms.help'}}</:description>
    <:body>
      {{#if @model.errors.signing_algorithms}}
        <Rose::Form::Errors as |errors|>
          {{#each @model.errors.signing_algorithms as |error|}}
            <errors.message>{{error.message}}</errors.message>
          {{/each}}
        </Rose::Form::Errors>
      {{/if}}
      <Rose::Table @style='condensed' as |table|>
        <table.header as |header|>
          <header.row @hidden={{true}} as |row|>
            <row.headerCell>{{t 'titles.value'}}</row.headerCell>
            <row.headerCell>{{t 'titles.actions'}}</row.headerCell>
          </header.row>
        </table.header>
        <table.body as |body|>
          {{#each @model.signing_algorithms as |algorithm i|}}
            <body.row as |row|>
              <row.cell>

                <Hds::Form::Select::Field
                  @value={{algorithm.value}}
                  @isInvalid={{@model.errors.signing_algorithms}}
                  disabled={{form.disabled}}
                  {{on 'change' (set-from-event algorithm 'value')}}
                  as |F|
                >
                  <F.Label class='sr-only'>{{t
                      'form.algorithm.label'
                    }}</F.Label>
                  <F.Options>
                    {{#each this.signingAlgorithms as |algorithmOption|}}
                      <option
                        value={{algorithmOption}}
                        selected={{eq algorithmOption algorithm.value}}
                      >{{algorithmOption}}</option>
                    {{/each}}
                  </F.Options>
                </Hds::Form::Select::Field>

              </row.cell>
              <row.cell @shrink={{true}}>
                <Rose::Button
                  @style='warning'
                  @iconOnly='flight-icons/svg/trash-16'
                  title={{t 'actions.remove'}}
                  @disabled={{if
                    @model.isNew
                    false
                    (if form.isEditable false true)
                  }}
                  {{on 'click' (fn @removeItemByIndex 'signing_algorithms' i)}}
                >
                  {{t 'actions.remove'}}
                </Rose::Button>
              </row.cell>
            </body.row>
          {{/each}}

          <body.row as |row|>
            <row.cell>

              <Hds::Form::Select::Field
                @value={{this.newSigningAlgorithm}}
                disabled={{form.disabled}}
                {{on 'change' (set-from-event this 'newSigningAlgorithm')}}
                as |F|
              >
                <F.Label class='sr-only'>{{t
                    'resources.auth-method.titles.new-signing-algorithm'
                  }}</F.Label>
                <F.Options>
                  {{#each this.signingAlgorithms as |algorithmOption|}}
                    <option
                      value={{algorithmOption}}
                      selected={{eq algorithmOption this.newSigningAlgorithm}}
                    >{{algorithmOption}}</option>
                  {{/each}}
                </F.Options>
              </Hds::Form::Select::Field>

            </row.cell>
            <row.cell @shrink={{true}}>
              <Rose::Button
                @style='secondary'
                title={{t 'actions.add'}}
                @disabled={{if
                  @model.isNew
                  false
                  (if form.isEditable false true)
                }}
                {{on
                  'click'
                  (fn
                    @addStringItem 'signing_algorithms' this.newSigningAlgorithm
                  )
                }}
              >
                {{t 'actions.add'}}
              </Rose::Button>
            </row.cell>
          </body.row>
        </table.body>
      </Rose::Table>
    </:body>
  </Rose::Form::Fieldset>

  {{! Allowed Audiences }}
  <Form::Field::ListWrapper
    @layout='horizontal'
    @isOptional={{true}}
    @disabled={{form.disabled}}
  >
    <:fieldset as |F|>
      <F.Legend>
        {{t 'form.allowed_audiences.label'}}
      </F.Legend>
      <F.HelperText>
        {{t 'form.allowed_audiences.help'}}
      </F.HelperText>

      {{#if @model.errors.allowed_audiences}}
        <F.Error as |E|>
          {{#each @model.errors.allowed_audiences as |error|}}
            <E.Message>{{error.message}}</E.Message>
          {{/each}}
        </F.Error>
      {{/if}}
    </:fieldset>

    <:field as |F|>
      <F.TextInput
        @name='allowed_audiences'
        @options={{@model.allowed_audiences}}
        @model={{@model}}
      />
    </:field>

  </Form::Field::ListWrapper>

  {{! Claims Scopes }}

  <Form::Field::ListWrapper
    @layout='horizontal'
    @isOptional={{true}}
    @disabled={{form.disabled}}
  >
    <:fieldset as |F|>
      <F.Legend>
        {{t 'form.claims_scopes.label'}}
      </F.Legend>
      <F.HelperText>
        {{t 'form.claims_scopes.help'}}
      </F.HelperText>

      {{#if @model.errors.claims_scopes}}
        <F.Error as |E|>
          {{#each @model.errors.claims_scopes as |error|}}
            <E.Message>{{error.message}}</E.Message>
          {{/each}}
        </F.Error>
      {{/if}}
    </:fieldset>

    <:field as |F|>
      <F.TextInput
        @name='claims_scopes'
        @options={{@model.claims_scopes}}
        @model={{@model}}
      />
    </:field>

  </Form::Field::ListWrapper>

  {{! Account Claim Maps }}
  <Rose::Form::Fieldset>
    <:title>{{t 'form.account_claim_maps.label'}}</:title>
    <:description>{{t 'form.account_claim_maps.help'}}</:description>
    <:body>
      {{#if @model.errors.account_claim_maps}}
        <Rose::Form::Errors as |errors|>
          {{#each @model.errors.account_claim_maps as |error|}}
            <errors.message>{{error.message}}</errors.message>
          {{/each}}
        </Rose::Form::Errors>
      {{/if}}
      <Rose::Table @style='condensed' as |table|>
        <table.header as |header|>
          <header.row as |row|>
            <row.headerCell>{{t 'form.from_claim.label'}}</row.headerCell>
            <row.headerCell>{{t 'form.to_claim.label'}}</row.headerCell>
            <row.headerCell>{{t 'titles.actions'}}</row.headerCell>
          </header.row>
        </table.header>
        <table.body as |body|>
          {{#each @model.account_claim_maps as |claimMap i|}}
            <body.row as |row|>
              <row.cell>
                <form.input
                  @type='text'
                  @name='from_claim'
                  @value={{claimMap.from}}
                  @error={{@model.errors.account_claim_maps}}
                  @contextual={{true}}
                  as |field|
                >
                  <field.label>{{t 'form.from_claim.label'}}</field.label>
                  <field.field />
                </form.input>
              </row.cell>
              <row.cell>

                <Hds::Form::Select::Field
                  @value={{claimMap.to}}
                  @isInvalid={{@model.errors.account_claim_maps}}
                  disabled={{form.disabled}}
                  {{on 'change' (set-from-event claimMap 'to')}}
                  as |F|
                >
                  <F.Label class='sr-only'>{{t 'form.to_claim.label'}}</F.Label>
                  <F.Options>
                    {{#each this.toClaims as |toClaimOption|}}
                      <option
                        value={{toClaimOption}}
                        selected={{eq toClaimOption claimMap.to}}
                      >{{toClaimOption}}</option>
                    {{/each}}
                  </F.Options>
                </Hds::Form::Select::Field>

              </row.cell>
              <row.cell @shrink={{true}}>
                <Rose::Button
                  @style='warning'
                  @iconOnly='flight-icons/svg/trash-16'
                  title={{t 'actions.remove'}}
                  @disabled={{if
                    @model.isNew
                    false
                    (if form.isEditable false true)
                  }}
                  {{on 'click' (fn @removeItemByIndex 'account_claim_maps' i)}}
                >
                  {{t 'actions.remove'}}
                </Rose::Button>
              </row.cell>
            </body.row>
          {{/each}}

          <body.row as |row|>
            <row.cell>
              <form.input
                @type='text'
                @name='from_claim'
                @value={{this.newFromClaim}}
                @label={{t 'resources.auth-method.titles.new-from-claim'}}
              />
            </row.cell>
            <row.cell>

              <Hds::Form::Select::Field
                @value={{this.newToClaim}}
                disabled={{form.disabled}}
                {{on 'change' (set-from-event this 'newToClaim')}}
                as |F|
              >
                <F.Label class='sr-only'>{{t
                    'resources.auth-method.titles.new-to-claim'
                  }}</F.Label>
                <F.Options>
                  {{#each this.toClaims as |toClaimOption|}}
                    <option
                      value={{toClaimOption}}
                      selected={{eq toClaimOption this.newToClaim}}
                    >{{toClaimOption}}</option>
                  {{/each}}
                </F.Options>
              </Hds::Form::Select::Field>

            </row.cell>
            <row.cell @shrink={{true}}>
              <Rose::Button
                @style='secondary'
                title={{t 'actions.add'}}
                @disabled={{if
                  @model.isNew
                  false
                  (if form.isEditable false true)
                }}
                {{on
                  'click'
                  (fn
                    @addAccountMapItem
                    'account_claim_maps'
                    this.newFromClaim
                    this.newToClaim
                  )
                }}
              >
                {{t 'actions.add'}}
              </Rose::Button>
            </row.cell>
          </body.row>
        </table.body>
      </Rose::Table>
    </:body>
  </Rose::Form::Fieldset>

  {{! Certificates }}
  <Form::Field::ListWrapper
    @layout='horizontal'
    @isOptional={{true}}
    @disabled={{form.disabled}}
  >
    <:fieldset as |F|>
      <F.Legend>
        {{t 'form.idp_ca_certs.label'}}
      </F.Legend>
      <F.HelperText>
        {{t 'form.idp_ca_certs.help'}}
      </F.HelperText>

      {{#if @model.errors.idp_ca_certs}}
        <F.Error as |E|>
          {{#each @model.errors.idp_ca_certs as |error|}}
            <E.Message>{{error.message}}</E.Message>
          {{/each}}
        </F.Error>
      {{/if}}
    </:fieldset>

    <:field as |F|>
      <F.Textarea
        @name='idp_ca_certs'
        @options={{@model.idp_ca_certs}}
        @model={{@model}}
      />
    </:field>

  </Form::Field::ListWrapper>

  <form.input
    @name='max_age'
    @type='number'
    @value={{@model.max_age}}
    @label={{t 'form.max_age.label'}}
    @helperText={{t 'form.max_age.help'}}
    @error={{@model.errors.max_age}}
    readonly={{false}}
    step='1'
    min='0'
    as |field|
  >
    {{#if @model.errors.max_age}}
      <field.errors as |errors|>
        {{#each @model.errors.max_age as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.input
    @name='api_url_prefix'
    @type='test'
    @value={{@model.api_url_prefix}}
    @label={{t 'form.api_url_prefix.label'}}
    @helperText={{t 'form.api_url_prefix.help'}}
    @error={{@model.errors.api_url_prefix}}
    readonly={{false}}
    as |field|
  >
    {{#if @model.errors.api_url_prefix}}
      <field.errors as |errors|>
        {{#each @model.errors.api_url_prefix as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <Hds::Form::Fieldset @isOptional={{true}} as |F|>
    <F.Legend>{{t 'form.prompts.label'}}</F.Legend>
    <F.HelperText>{{t 'form.prompts.help'}}</F.HelperText>
    <F.Control>
      <Hds::Form::Toggle::Field
        name='prompts'
        checked={{this.skipPromptsList}}
        disabled={{form.disabled}}
        {{on 'change' (fn this.toggleField 'none')}}
        as |F|
      >
        <F.Label>
          {{t 'resources.auth-method.form.none.label'}}
        </F.Label>
        <F.HelperText>
          {{t 'resources.auth-method.form.none.help'}}
        </F.HelperText>
      </Hds::Form::Toggle::Field>
      {{#unless this.skipPromptsList}}
        <Hds::Form::Checkbox::Group
          class='oidc-prompts'
          @name='prompts'
          disabled={{form.disabled}}
          as |G|
        >
          {{#each this.prompts as |prompt|}}
            <G.Checkbox::Field
              @id={{prompt}}
              checked={{includes prompt this.selectedPrompts}}
              {{on 'change' (fn this.updatePrompt prompt)}}
              as |F|
            >
              <F.Label>
                {{t (concat 'resources.auth-method.form.' prompt '.label')}}
              </F.Label>
              <F.HelperText>
                {{t (concat 'resources.auth-method.form.' prompt '.help')}}
              </F.HelperText>
            </G.Checkbox::Field>
          {{/each}}
        </Hds::Form::Checkbox::Group>
      {{/unless}}
    </F.Control>
    {{#if @model.errors.prompts}}
      <F.Error as |E|>
        {{#each @model.errors.prompts as |error|}}
          <E.Message>{{error.message}}</E.Message>
        {{/each}}
      </F.Error>
    {{/if}}
  </Hds::Form::Fieldset>

  {{#unless @model.isNew}}
    <form.input
      @value={{@model.callback_url}}
      @label={{t 'form.callback_url.label'}}
      @helperText={{t 'form.callback_url.help'}}
      readonly={{true}}
      @disabled={{true}}
    />
  {{/unless}}

  {{#if (can 'save model' @model)}}
    <form.actions
      @enableEditText={{t 'actions.edit-form'}}
      @submitText={{t 'actions.save'}}
      @cancelText={{t 'actions.cancel'}}
    />
  {{/if}}
</Rose::Form>