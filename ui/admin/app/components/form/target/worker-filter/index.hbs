<Rose::Form
  class='full-width'
  @onSubmit={{@submit}}
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  as |form|
>
  <Hds::Form::Field as |F|>
    <F.Control>
      <Rose::CodeEditor as |c|>
        <c.toolbar @copyText={{get @model @name}} />
        <c.fieldEditor
          @onInput={{@onInput}}
          @value={{or (get @model @name) ''}}
          @options={{hash
            mode='text/x-sh'
            gutters=(array 'CodeMirror-lint-markers')
            lint='true'
          }}
        />
      </Rose::CodeEditor>
    </F.Control>
    {{#if (get @model.errors @name)}}
      <F.Error as |E|>
        {{#each (get @model.errors @name) as |error|}}
          <E.Message>{{error.message}}</E.Message>
        {{/each}}
      </F.Error>
    {{/if}}
  </Hds::Form::Field>

  <form.actions
    @submitText={{t 'resources.target.workers.actions.add-filter'}}
    @cancelText={{t 'actions.cancel'}}
  />
</Rose::Form>