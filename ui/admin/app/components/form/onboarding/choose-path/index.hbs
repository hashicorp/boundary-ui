<Rose::Form
  class='full-width'
  @cancel={{@cancel}}
  @disabled={{@model.isSaving}}
  @onSubmit={{fn @submit this.path}}
  as |form|
>
  {{!-- <form.radioGroup
    @name='paths'
    @selectedValue={{this.path}}
    @changed={{this.toggleRadio}}
    as |radioGroup|
  > --}}
  {{! <div class='choose-path-cards'> }}
  {{this.path}}pahhh
  <Hds::Form::RadioCard::Group @name='onboarding' as |G|>
    <G.RadioCard
      @maxWidth='20rem'
      @checked={{eq this.path 'guided'}}
      @value='guided'
      {{on 'input' (fn this.toggleRadio 'guided')}}
      as |R|
    >
      <R.Label>{{t 'onboarding.quick-start.titles.quick-setup'}}</R.Label>
      <R.Description>{{t
          'onboarding.quick-start.descriptions.quick-setup'
        }}</R.Description>
    </G.RadioCard>
    <G.RadioCard
      @maxWidth='20rem'
      @checked={{eq this.path 'manual'}}
      @value='manual'
      {{on 'input' (fn this.toggleRadio 'manual')}}
      as |R|
    >
      <R.Label>{{t 'onboarding.quick-start.titles.manual'}}</R.Label>
      <R.Description>{{t
          'onboarding.quick-start.descriptions.manual'
        }}</R.Description>
    </G.RadioCard>
  </Hds::Form::RadioCard::Group>
  <br />
  {{! </div> }}
  {{! </form.radioGroup> }}
  <form.actions @submitText={{t 'actions.next'}} @showCancel={{false}} />
</Rose::Form>