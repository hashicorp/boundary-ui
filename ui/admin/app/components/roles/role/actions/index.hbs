<Rose::Dropdown
  @text={{t 'actions.manage'}}
  @dropdownRight={{true}}
  as |dropdown|
>
  {{#if (can 'addPrincipals role' @model)}}
    <dropdown.link @route='scopes.scope.roles.role.add-principals'>
      {{t 'resources.role.principal.actions.add-principals'}}
    </dropdown.link>
  {{/if}}
  {{#if (can 'delete model' @model)}}
    <dropdown.separator />
    <dropdown.button
      @style='danger'
      @disabled={{@model.canSave}}
      {{on 'click' (route-action 'delete' @model)}}
    >
      {{t 'resources.role.actions.delete'}}
    </dropdown.button>
  {{/if}}
</Rose::Dropdown>
