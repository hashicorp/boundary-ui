{{page-title (t 'actions.change-password')}}

<Rose::Layout::Centered>
  <Rose::Layout::Page as |page|>

    <page.body>
      <Rose::Frame>
        <:header>
          <Hds::Icon @name='boundary-color' @size='24' @isInline={{true}} />
          <Hds::Text::Display
            @tag='h2'
            @size='400'
            @weight='bold'
            class='header-spacing'
          >{{t 'actions.change-password'}}</Hds::Text::Display>
        </:header>
        <:body>
          <Form::Account::Password::ChangePassword
            @model={{@model}}
            @submit={{fn this.changePassword @model}}
            @cancel={{fn this.cancel @model}}
          />
        </:body>
      </Rose::Frame>
    </page.body>

  </Rose::Layout::Page>
</Rose::Layout::Centered>