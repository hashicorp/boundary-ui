<Rose::Layout::Centered class='create-resources'>
  <Rose::Frame>
    <:header>
      <Hds::Text::Display
        @tag='h2'
        @size='400'
        @weight='bold'
        class='header-spacing'
      >{{t 'onboarding.add-target.titles.have-a-target'}}</Hds::Text::Display>
    </:header>
    <:body>
      <p>{{t 'onboarding.add-target.descriptions.setup-first-target'}}</p>
      <Form::Onboarding
        @model={{@model}}
        @submit={{fn this.createResources @model}}
        @cancel={{this.doLater}}
      />
    </:body>
  </Rose::Frame>
</Rose::Layout::Centered>