{{page-title (t 'resources.group.messages.add-members.title')}}
<Breadcrumbs::Item
  @text={{t 'resources.group.messages.add-members.title'}}
  @route='scopes.scope.groups.group.add-members'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display @tag='h2' @size='400' @weight='bold'>
      {{t 'resources.group.messages.add-members.title'}}
      <DocLink @doc='group.add-members' />
    </Hds::Text::Display>
    <Hds::Text::Body @tag='p' @size='300' class='p'>
      {{t 'resources.group.messages.add-members.description'}}
    </Hds::Text::Body>
  </page.header>

  <page.body>

    <Dropdown
      name='scopeIds'
      class='dropdown-checkbox-list'
      @listPosition='bottom-left'
      @toggleText={{t 'resources.scope.title_plural'}}
      @itemOptions={{@model.scopes}}
      @checkedItems={{this.scopeIds}}
      @applyFilter={{fn this.applyFilter 'scopeIds'}}
    />
    <FilterTags @filters={{this.filters}} />
    <br />

    <Form::Group::AddMembers
      @model={{@model.group}}
      @users={{@model.users}}
      @submit={{fn this.addMembers @model.group}}
      @cancel={{this.cancel}}
    />
  </page.body>

</Rose::Layout::Page>