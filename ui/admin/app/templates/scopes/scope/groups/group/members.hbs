{{page-title (t 'resources.group.messages.members.title')}}

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
  </page.breadcrumbs>

  <page.header>
    <Groups::Group::Header @model={{@model.group}} />
  </page.header>

  <page.navigation>
    <Groups::Group::Nav @model={{@model.group}} />
  </page.navigation>

  <page.actions>
    <Groups::Group::Actions @model={{@model.group}} />
  </page.actions>

  <page.body>
    {{#if @model.members}}

      <Rose::Table as |table|>
        <table.header as |header|>
          <header.row as |row|>
            <row.headerCell>{{t 'form.name.label'}}</row.headerCell>
            <row.headerCell>{{t 'form.id.label'}}</row.headerCell>
            <row.headerCell>{{t 'resources.scope.title'}}</row.headerCell>
            <row.headerCell>{{t 'titles.actions'}}</row.headerCell>
          </header.row>
        </table.header>
        <table.body as |body|>
          {{#each @model.members as |member|}}
            <body.row as |row|>
              <row.headerCell>
                {{member.displayName}}
                {{#if member.accountName}}
                  <br /><Hds::Badge @text={{member.accountName}} />
                {{/if}}
              </row.headerCell>
              <row.cell>
                <Copyable
                  @text={{member.id}}
                  @buttonText={{t 'actions.copy-to-clipboard'}}
                  @acknowledgeText={{t 'states.copied'}}
                >
                  <code>{{member.id}}</code>
                </Copyable>
              </row.cell>
              <row.cell>
                <ScopeBadge @scope={{member.scopeModel}} />
              </row.cell>
              <row.cell>
                {{#if (can 'removeMembers group' @model.group)}}
                  <Rose::Dropdown
                    @icon='flight-icons/svg/more-horizontal-16'
                    @iconOnly={{true}}
                    @showCaret={{false}}
                    @dropdownRight={{true}}
                    @text={{t 'actions.manage'}}
                    as |dropdown|
                  >
                    <dropdown.button
                      @style='danger'
                      {{on
                        'click'
                        (route-action 'removeMember' @model.group member)
                      }}
                    >
                      {{t 'actions.remove'}}
                    </dropdown.button>
                  </Rose::Dropdown>
                {{/if}}
              </row.cell>
            </body.row>
          {{/each}}
        </table.body>
      </Rose::Table>

    {{else}}

      <Rose::Layout::Centered>
        <Rose::Message
          @title={{t 'resources.group.messages.members.title'}}
          as |message|
        >
          <message.description>
            {{t 'resources.group.messages.members.description'}}
          </message.description>
          <message.link @route='scopes.scope.groups.group.add-members'>
            <Rose::Icon @name='flight-icons/svg/plus-circle-16' />
            {{t 'resources.group.actions.add-members'}}
          </message.link>
        </Rose::Message>
      </Rose::Layout::Centered>

    {{/if}}
  </page.body>

</Rose::Layout::Page>