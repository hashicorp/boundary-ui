<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Groups::Group::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <Groups::Group::Nav @model={{@model}} />
  </page.navigation>

  <page.actions>
    <Groups::Group::Actions
      @model={{@model}}
      @delete={{fn this.groups.delete @model}}
    />
  </page.actions>

  <page.body>
    <Form::Group
      @model={{@model}}
      @submit={{fn this.groups.save @model}}
      @cancel={{fn this.groups.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>