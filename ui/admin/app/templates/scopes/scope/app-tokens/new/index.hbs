<Rose::Layout::Page as |page|>
  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.app-token.titles.new'}}
        <DocLink @doc='app-tokens' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.app-token.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::AppToken::New
      @model={{@model.appToken}}
      @scopes={{@model.scopes}}
      @totalItems={{@model.totalItems}}
      @filters={{this.filters}}
      @page={{this.page}}
      @pageSize={{this.pageSize}}
      @handleSearchInput={{this.handleSearchInput}}
      @showSelectedOnly={{this.showSelectedOnly}}
      @toggleShowSelectedOnly={{this.toggleShowSelectedOnly}}
      @submit={{fn this.appTokens.create @model.appToken}}
      @cancel={{fn this.appTokens.cancel @model.appToken}}
    />
  </page.body>
</Rose::Layout::Page>