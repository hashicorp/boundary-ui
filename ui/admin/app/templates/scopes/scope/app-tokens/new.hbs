{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.app-token.titles.new'}}
  @route='scopes.scope.app-tokens.new'
/>

<Rose::Layout::Page as |page|>
  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{#if this.cloneAppToken}}
          {{t 'resources.app-token.titles.clone'}}
        {{else}}
          {{t 'resources.app-token.titles.new'}}
        {{/if}}
        <DocLink @doc='app-tokens' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.app-token.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>
  <page.body>
    <Form::AppToken::New
      @model={{@model}}
      @submit={{fn this.appTokens.create @model}}
      @cancel={{fn this.appTokens.cancel @model}}
    />
  </page.body>
</Rose::Layout::Page>