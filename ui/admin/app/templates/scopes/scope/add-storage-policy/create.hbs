{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.policy.titles.new'}}
  @route='scopes.scope.add-storage-policy.create'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display
      @tag='h2'
      @size='400'
      @weight='bold'
      class='header-spacing'
    >
      {{t 'resources.policy.titles.new'}}
      <DocLink @doc='storage-policy.new' @iconSize='large' />
    </Hds::Text::Display>
    <p>{{t 'resources.policy.description'}}</p>
  </page.header>

  <page.body>
    <Form::Policy
      @model={{@model}}
      @submit={{fn this.save @model}}
      @cancel={{fn this.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>