{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.policy.actions.add'}}
  @route='scopes.scope.add-storage-policy'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display @tag='h2' @size='400' @weight='bold' class='header'>
      {{t 'resources.policy.actions.add'}}
      <DocLink @doc='storage-policy.new' />
    </Hds::Text::Display>
  </page.header>

  <page.body>
    <Form::Scope::AddStoragePolicy
      @model={{@model}}
      @policyList={{this.policyList}}
      @submit={{fn this.attachStoragePolicy @model}}
      @cancel={{fn this.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>