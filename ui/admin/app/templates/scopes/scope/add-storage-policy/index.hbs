{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.policy.actions.add'}}
  @route='scopes.scope.add-storage-policy'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display @tag='h1' class='add-storage-policy'>
      {{t 'resources.policy.actions.add'}}
    </Hds::Text::Display>
  </page.header>

  <page.body>
    <Form::Scope::AddStoragePolicy
      @model={{@model}}
      @policyList={{this.policyList}}
      @submit={{route-action 'attachStoragePolicy' @model}}
      @cancel={{route-action 'cancel' @model}}
    />
  </page.body>

</Rose::Layout::Page>