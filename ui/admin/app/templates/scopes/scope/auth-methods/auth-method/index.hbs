<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <AuthMethods::AuthMethod::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <AuthMethods::AuthMethod::Nav @model={{@model}} />
  </page.navigation>

  <page.actions>
    <AuthMethods::AuthMethod::Actions
      @model={{@model}}
      @changeState={{this.authMethods.changeState}}
      @removeAsPrimary={{this.authMethods.removeAsPrimary}}
      @makePrimary={{this.authMethods.makePrimary}}
      @delete={{this.authMethods.delete}}
    />
  </page.actions>

  <page.body>
    <Form::AuthMethod
      @model={{@model}}
      @edit={{fn this.authMethods.edit @model}}
      @submit={{fn this.authMethods.save @model}}
      @cancel={{fn this.authMethods.cancel @model}}
      @removeItemByIndex={{fn this.authMethods.removeItemByIndex @model}}
      @addStringItem={{fn this.authMethods.addStringItem @model}}
      @addAccountMapItem={{fn this.authMethods.addAccountMapItem @model}}
    />
  </page.body>

</Rose::Layout::Page>