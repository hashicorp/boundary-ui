<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <AuthMethods::AuthMethod::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <AuthMethods::AuthMethod::Nav @model={{@model}} />
  </page.navigation>

  <page.actions>
    <AuthMethods::AuthMethod::Actions @model={{@model}} />
  </page.actions>

  <page.body>
    <Form::AuthMethod
      @model={{@model}}
      @edit={{route-action 'edit' @model}}
      @submit={{route-action 'save' @model}}
      @cancel={{route-action 'cancel' @model}}
      @removeItemByIndex={{route-action 'removeItemByIndex' @model}}
      @addStringItem={{route-action 'addStringItem' @model}}
      @addAccountMapItem={{route-action 'addAccountMapItem' @model}}
    />
  </page.body>

</Rose::Layout::Page>