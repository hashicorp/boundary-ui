{{page-title (t 'actions.set-password')}}
<Breadcrumbs::Item
  @text={{t 'actions.set-password'}}
  @route='scopes.scope.auth-methods.auth-method.accounts.account.set-password'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>{{t 'resources.account.title'}}</h2>
    <p>{{t 'resources.account.messages.set-password.description'}}</p>
    <Hds::Copy::Snippet @textToCopy={{@model.id}} @color='secondary' />
  </page.header>

  <page.navigation>
    <AuthMethods::AuthMethod::Accounts::Account::Nav @model={{@model}} />
  </page.navigation>

  <page.actions>
    <AuthMethods::AuthMethod::Accounts::Account::Actions @model={{@model}} />
  </page.actions>

  <page.body>
    <Form::Account::Password::SetPassword
      @model={{@model}}
      @submit={{route-action 'setPassword' @model}}
      @cancel={{route-action 'cancel' @model}}
    />
  </page.body>

</Rose::Layout::Page>