<Rose::Layout::Page class='new-rose-page-layout' as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      {{#let (hash title=PH.Title description=PH.Description) as |header|}}
        <AuthMethods::AuthMethod::Accounts::Account::Header
          @header={{header}}
        />
      {{/let}}
      <PH.Actions>
        <AuthMethods::AuthMethod::Accounts::Account::Actions
          @model={{@model}}
          @delete={{this.accounts.delete}}
        />
      </PH.Actions>
    </Hds::PageHeader>
    <Hds::Copy::Snippet @textToCopy={{@model.id}} @color='secondary' />
  </page.header>

  <page.navigation>
    <AuthMethods::AuthMethod::Accounts::Account::Nav @model={{@model}} />
  </page.navigation>

  <page.body>
    <Form::Account
      @model={{@model}}
      @submit={{fn this.accounts.save @model}}
      @cancel={{fn this.accounts.cancel @model}}
    />

  </page.body>

</Rose::Layout::Page>