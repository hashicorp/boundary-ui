<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <AuthMethods::AuthMethod::Accounts::Account::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <AuthMethods::AuthMethod::Accounts::Account::Nav @model={{@model}} />
  </page.navigation>

  <page.actions>
    <AuthMethods::AuthMethod::Accounts::Account::Actions
      @model={{@model}}
      @delete={{this.accounts.delete}}
    />
  </page.actions>

  <page.body>
    <Form::Account
      @model={{@model}}
      @submit={{fn this.accounts.save @model}}
      @cancel={{fn this.accounts.cancel @model}}
    />

  </page.body>

</Rose::Layout::Page>