{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.managed-group.titles.new'}}
  @route='scopes.scope.auth-methods.auth-method.managed-groups.new'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.managed-group.titles.new'}}
      <DocLink @doc='managed-groups' @iconSize='large' />
    </h2>
    <p>{{t 'resources.managed-group.description'}}</p>
  </page.header>

  <page.body>
    <Form::ManagedGroup
      @model={{@model}}
      @submit={{route-action 'save' @model}}
      @cancel={{route-action 'cancel' @model}}
      @removeItemByIndex={{route-action 'removeItemByIndex' @model}}
      @addStringItem={{route-action 'addStringItem' @model}}
    />
  </page.body>

</Rose::Layout::Page>