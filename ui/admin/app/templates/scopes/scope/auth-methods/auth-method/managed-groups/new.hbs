{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.managed-group.titles.new'}}
  @route='scopes.scope.auth-methods.auth-method.managed-groups.new'
/>

<Rose::Layout::Page class='hds-migration-overrides' as |page|>
  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.managed-group.titles.new'}}
        <DocLink @doc='managed-groups' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.managed-group.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::ManagedGroup
      @model={{@model}}
      @submit={{fn this.managedGroups.save @model}}
      @cancel={{fn this.managedGroups.cancel @model}}
      @removeItemByIndex={{fn this.authMethods.removeItemByIndex @model}}
      @addStringItem={{fn this.authMethods.addStringItem @model}}
    />
  </page.body>

</Rose::Layout::Page>