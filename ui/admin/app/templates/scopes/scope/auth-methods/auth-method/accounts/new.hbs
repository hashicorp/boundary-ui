{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.account.titles.new'}}
  @route='scopes.scope.auth-methods.auth-method.accounts.new'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.account.titles.new'}}
      <DocLink @doc='account.new' @iconSize='large' />
    </h2>
    <p>{{t 'resources.account.description'}}</p>
  </page.header>

  <page.body>
    <Form::Account
      @model={{@model}}
      @submit={{route-action 'save' @model}}
      @cancel={{route-action 'cancel' @model}}
    />

  </page.body>

</Rose::Layout::Page>