{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.account.titles.new'}}
  @route='scopes.scope.auth-methods.auth-method.accounts.new'
/>

<Rose::Layout::Page class='new-rose-page-layout' as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.account.titles.new'}}
        <DocLink @doc='account.new' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.account.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::Account
      @model={{@model}}
      @submit={{fn this.accounts.save @model}}
      @cancel={{fn this.accounts.cancel @model}}
    />

  </page.body>

</Rose::Layout::Page>