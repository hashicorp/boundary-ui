{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.credential.titles.new'}}
  @route='scopes.scope.credential-stores.credential-store.credentials.new'
/>

<Rose::Layout::Page class='new-rose-page-layout' as |page|>
  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.credential.titles.new'}}
        <DocLink @doc='credential' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.credential.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::Credential
      @model={{@model}}
      @submit={{fn this.credentials.save @model}}
      @cancel={{fn this.credentials.cancel @model}}
      @changeType={{this.credentials.changeType}}
    />
  </page.body>
</Rose::Layout::Page>