{{page-title (t 'actions.edit-worker-filter')}}
<Breadcrumbs::Item
  @text={{t 'actions.edit-worker-filter'}}
  @route='scopes.scope.credential-stores.credential-store.edit-worker-filter'
/>

<Rose::Layout::Page as |page|>
  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'actions.edit-worker-filter'}}
        <DocLink @doc='worker-filters-format' />
      </PH.Title>
      <PH.Description>
        {{t
          'resources.credential-store.worker-filter.messages.edit.description'
        }}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::WorkerFilter
      @name='worker_filter'
      @model={{@model}}
      @submit={{fn this.credentialStores.saveWorkerFilter @model}}
      @cancel={{fn this.credentialStores.cancelWorkerFilter @model}}
    />
  </page.body>
</Rose::Layout::Page>