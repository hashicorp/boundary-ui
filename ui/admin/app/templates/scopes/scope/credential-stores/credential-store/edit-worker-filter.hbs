{{page-title (t 'resources.credential-store.titles.edit-worker-filter.title')}}

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <CredentialStores::CredentialStore::Header::EditWorkerFilter />
  </page.header>

  <page.body>
    <Form::WorkerFilter
      @name='worker_filter'
      @model={{@model}}
      @submit={{fn this.credentialStores.saveWorkerFilter @model}}
      @cancel={{fn this.credentialStores.cancelWorkerFilter @model}}
    />
  </page.body>
</Rose::Layout::Page>