<Rose::Layout::Page class='new-rose-page-layout' as |page|>
  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      {{#let (hash title=PH.Title description=PH.Description) as |header|}}
        <CredentialStores::CredentialStore::Header @header={{header}} />
      {{/let}}
      <PH.Actions>
        <CredentialStores::CredentialStore::Actions
          @model={{@model}}
          @delete={{fn this.credentialStores.delete @model}}
        />
      </PH.Actions>
    </Hds::PageHeader>
    <Hds::Copy::Snippet @textToCopy={{@model.id}} @color='secondary' />
  </page.header>

  <page.navigation>
    <CredentialStores::CredentialStore::Nav @model={{@model}} />
  </page.navigation>

  <page.body>
    <Form::CredentialStore
      @model={{@model}}
      @submit={{fn this.credentialStores.save @model}}
      @cancel={{fn this.credentialStores.cancel @model}}
    />
  </page.body>
</Rose::Layout::Page>