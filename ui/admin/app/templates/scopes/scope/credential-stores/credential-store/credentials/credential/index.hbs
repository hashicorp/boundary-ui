<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.credential.title'}}
      <DocLink @doc='credential' @iconSize='large' />
    </h2>
    <p>{{t 'resources.credential.description'}}</p>
    <Hds::Copy::Snippet @textToCopy={{@model.id}} @color='secondary' />
  </page.header>

  <page.navigation>
    <Rose::Nav::Tabs as |nav|>
      <nav.link
        @route='scopes.scope.credential-stores.credential-store.credentials.credential.index'
      >
        {{t 'titles.details'}}
      </nav.link>
    </Rose::Nav::Tabs>
  </page.navigation>

  <page.actions>
    {{#if (can 'delete model' @model)}}
      <Rose::Dropdown
        @text={{t 'actions.manage'}}
        @dropdownRight={{true}}
        as |dropdown|
      >
        <dropdown.button
          @style='danger'
          @disabled={{@model.canSave}}
          {{on 'click' (fn this.credentials.delete @model)}}
        >
          {{t 'resources.credential.actions.delete'}}
        </dropdown.button>
      </Rose::Dropdown>
    {{/if}}
  </page.actions>

  <page.body>
    <Form::Credential
      @model={{@model}}
      @submit={{fn this.credentials.save @model}}
      @cancel={{fn this.credentials.cancel @model}}
    />
  </page.body>
</Rose::Layout::Page>