{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.credential-library.titles.new'}}
  @route='scopes.scope.credential-stores.credential-store.credential-libraries.new'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.credential-library.titles.new'}}
      <DocLink @doc='credential-library' @iconSize='large' />
    </h2>
    <p>{{t 'resources.credential-library.description'}}</p>
  </page.header>

  <page.body>
    <Form::CredentialLibrary
      @model={{@model}}
      @submit={{fn this.credentialLibraries.save @model}}
      @cancel={{fn this.credentialLibraries.cancel @model}}
      @changeType={{this.credentialLibraries.changeType}}
    />
  </page.body>
</Rose::Layout::Page>