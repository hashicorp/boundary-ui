{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.credential-store.titles.new'}}
  @route='scopes.scope.credential-stores.new'
/>

<Rose::Layout::Page as |page|>
  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.credential-store.titles.new'}}
        <DocLink @doc='credential-store' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.credential-store.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::CredentialStore
      @model={{@model}}
      @submit={{fn this.credentialStores.save @model}}
      @cancel={{fn this.credentialStores.cancel @model}}
      @changeType={{this.credentialStores.changeType}}
    />
  </page.body>

</Rose::Layout::Page>