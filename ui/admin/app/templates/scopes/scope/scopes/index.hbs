<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
  </page.breadcrumbs>

  <page.header>
    {{#if @model.currentScope.isGlobal}}
      <h2>
        {{t 'resources.org.title_plural'}}
        <DocLink @doc='org' @iconSize='large' />
      </h2>
      {{#if @model.subScopes}}
        <p>{{t 'resources.org.description'}}</p>
      {{/if}}
    {{else if @model.currentScope.isOrg}}
      <h2>
        {{t 'resources.project.title_plural'}}
        <DocLink @doc='project' @iconSize='large' />
      </h2>
      {{#if @model.subScopes}}
        <p>{{t 'resources.project.description'}}</p>
      {{/if}}
    {{/if}}
  </page.header>

  <page.actions>
    {{#if (can 'create model' @model.currentScope collection='scopes')}}
      {{#if @model.subScopes}}
        <Rose::LinkButton @route='scopes.scope.scopes.new' @style='primary'>
          {{#if @model.currentScope.isGlobal}}
            {{t 'resources.org.titles.new'}}
          {{else if @model.currentScope.isOrg}}
            {{t 'resources.project.titles.new'}}
          {{/if}}
        </Rose::LinkButton>
      {{/if}}
    {{/if}}
  </page.actions>

  <page.body>

    {{#if @model.subScopes}}

      <Rose::Cards as |cards|>
        {{#each @model.subScopes as |scope|}}
          <cards.link
            @title={{scope.name}}
            @description={{scope.description}}
            @id={{scope.id}}
            @icon={{if
              scope.isOrg
              'flight-icons/svg/org-16'
              'flight-icons/svg/grid-16'
            }}
            @route='scopes.scope'
            @model={{scope.id}}
          />
        {{/each}}
      </Rose::Cards>

    {{else}}

      {{#if @model.currentScope.isGlobal}}
        <Rose::Layout::Centered>
          <Rose::Message
            @title={{t 'resources.org.messages.welcome.title'}}
            as |message|
          >
            <message.description>
              {{t 'resources.org.description'}}
            </message.description>
            {{#if (can 'create model' @model.currentScope collection='scopes')}}
              <message.link @route='scopes.scope.scopes.new'>
                <Rose::Icon @name='flight-icons/svg/plus-circle-16' />
                {{t 'titles.new'}}
              </message.link>
            {{/if}}
          </Rose::Message>
        </Rose::Layout::Centered>
      {{/if}}

      {{#if @model.currentScope.isOrg}}
        <Rose::Layout::Centered>
          <Rose::Message
            @title={{t 'resources.project.messages.welcome.title'}}
            as |message|
          >
            <message.description>
              {{t 'resources.project.description'}}
            </message.description>
            {{#if (can 'create model' @model.currentScope collection='scopes')}}
              <message.link @route='scopes.scope.scopes.new'>
                <Rose::Icon @name='flight-icons/svg/plus-circle-16' />
                {{t 'titles.new'}}
              </message.link>
            {{/if}}
          </Rose::Message>
        </Rose::Layout::Centered>
      {{/if}}

    {{/if}}

  </page.body>

</Rose::Layout::Page>