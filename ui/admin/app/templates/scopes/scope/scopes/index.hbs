<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      {{#if (or @model.currentScope.isGlobal @model.currentScope.isOrg)}}
        {{#let
          (if @model.currentScope.isGlobal 'org' 'project')
          as |scopeType|
        }}
          <PH.Title>
            {{t (concat 'resources.' scopeType '.title_plural')}}
            <DocLink @doc={{scopeType}} />
          </PH.Title>
          {{#if @model.doScopesExist}}
            <PH.Description>
              {{t (concat 'resources.' scopeType '.description')}}
            </PH.Description>
          {{/if}}
        {{/let}}
      {{/if}}
      {{#if (can 'create model' @model.currentScope collection='scopes')}}
        <PH.Actions>
          {{#if @model.doScopesExist}}
            <Hds::Button
              @route='scopes.scope.scopes.new'
              @text={{t
                (if
                  @model.currentScope.isGlobal
                  'resources.org.titles.new'
                  'resources.project.titles.new'
                )
              }}
            />
          {{/if}}
        </PH.Actions>
      {{/if}}
    </Hds::PageHeader>
  </page.header>

  <page.body class='search-filtering'>

    {{#if @model.doScopesExist}}
      <Hds::SegmentedGroup as |S|>
        <S.TextInput
          @value={{this.search}}
          @type='search'
          placeholder={{t 'actions.search'}}
          aria-label={{t 'actions.search'}}
          {{on 'input' this.handleSearchInput}}
        />
      </Hds::SegmentedGroup>
      {{#if @model.subScopes}}
        <Hds::Table
          @columns={{array
            (hash label=(t 'form.name.label'))
            (hash label=(t 'form.id.label'))
          }}
          @model={{@model.subScopes}}
          @valign='middle'
        >
          <:body as |B|>
            <B.Tr data-test-scopes-table-row={{B.data.id}}>
              <B.Td>
                {{#if (can 'read model' B.data)}}
                  <LinkTo @route='scopes.scope' @model={{B.data.id}}>
                    {{B.data.displayName}}
                  </LinkTo>
                {{else}}
                  <Hds::Text::Body @tag='p'>
                    {{B.data.displayName}}
                  </Hds::Text::Body>
                {{/if}}
                <Hds::Text::Body @tag='p'>
                  {{B.data.description}}
                </Hds::Text::Body>
              </B.Td>
              <B.Td>
                <Hds::Copy::Snippet
                  @textToCopy={{B.data.id}}
                  @color='secondary'
                />
              </B.Td>
            </B.Tr>
          </:body>
        </Hds::Table>
        <Rose::Pagination
          @totalItems={{@model.totalItems}}
          @currentPage={{this.page}}
          @currentPageSize={{this.pageSize}}
        />
      {{else}}
        <Hds::ApplicationState data-test-no-scope-results as |A|>
          <A.Header @title={{t 'titles.no-results-found'}} />
          <A.Body
            @text={{t
              'descriptions.no-search-results'
              query=this.search
              resource=(t 'resources.scope.title_plural')
            }}
          />
        </Hds::ApplicationState>
      {{/if}}

    {{else}}
      <Hds::ApplicationState as |A|>
        <A.Header
          @title={{t
            (if
              @model.currentScope.isGlobal
              'resources.org.messages.welcome.title'
              'resources.project.messages.welcome.title'
            )
          }}
        />
        <A.Body
          @text={{t
            (if
              @model.currentScope.isGlobal
              'resources.org.description'
              'resources.project.description'
            )
          }}
        />
        {{#if (can 'create model' @model.currentScope collection='scopes')}}
          <A.Footer as |F|>
            <F.LinkStandalone
              @icon='plus-circle'
              @text={{t 'titles.new'}}
              @route='scopes.scope.scopes.new'
            />
          </A.Footer>
        {{/if}}
      </Hds::ApplicationState>
    {{/if}}

  </page.body>

</Rose::Layout::Page>