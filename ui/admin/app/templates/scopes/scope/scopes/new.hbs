{{page-title (t 'titles.new')}}
{{#if @model.isOrg}}
  <Breadcrumbs::Item
    @text={{t 'resources.org.titles.new'}}
    @route='scopes.scope.scopes.new'
  />
{{else if @model.isProject}}
  <Breadcrumbs::Item
    @text={{t 'resources.project.titles.new'}}
    @route='scopes.scope.scopes.new'
  />
{{/if}}

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    {{#if @model.isOrg}}
      <Hds::Text::Display
        @tag='h2'
        @size='400'
        @weight='bold'
        class='header-spacing'
      >
        {{t 'resources.org.titles.new'}}
        <DocLink @doc='org.new' />
      </Hds::Text::Display>
      <p>{{t 'resources.org.description'}}</p>
    {{else if @model.isProject}}
      <Hds::Text::Display
        @tag='h2'
        @size='400'
        @weight='bold'
        class='header-spacing'
      >
        {{t 'resources.project.titles.new'}}
        <DocLink @doc='project.new' />
      </Hds::Text::Display>
      <p>{{t 'resources.project.description'}}</p>
    {{/if}}
  </page.header>

  <page.body>
    <Form::Scope
      @model={{@model}}
      @submit={{fn this.scopes.save @model}}
      @cancel={{fn this.scopes.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>