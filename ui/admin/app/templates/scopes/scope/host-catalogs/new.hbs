{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.host-catalog.titles.new'}}
  @route='scopes.scope.host-catalogs.new'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.host-catalog.titles.new'}}
      <DocLink @doc='host-catalog.new' @iconSize='large' />
    </h2>
    <p>{{t 'resources.host-catalog.description'}}</p>
  </page.header>

  <page.body>
    <Form::HostCatalog
      @model={{@model}}
      @submit={{fn this.hostCatalogs.save @model}}
      @cancel={{fn this.hostCatalogs.cancel @model}}
      @changeType={{this.hostCatalogs.changeType}}
    />
  </page.body>

</Rose::Layout::Page>