{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.host-catalog.titles.new'}}
  @route='scopes.scope.host-catalogs.new'
/>

<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.host-catalog.titles.new'}}
        <DocLink @doc='host-catalog.new' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.host-catalog.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::HostCatalog
      @model={{@model}}
      @submit={{fn this.hostCatalogs.save @model}}
      @cancel={{fn this.hostCatalogs.cancel @model}}
      @changeType={{this.hostCatalogs.changeType}}
      @changeCredentialType={{fn this.hostCatalogs.changeCredentialType @model}}
    />
  </page.body>

</Rose::Layout::Page>