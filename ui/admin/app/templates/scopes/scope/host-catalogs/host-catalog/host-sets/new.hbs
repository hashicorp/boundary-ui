{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.host-set.titles.new'}}
  @route='scopes.scope.host-catalogs.host-catalog.host-sets.new'
/>

<Rose::Layout::Page class='hds-migration-overrides' as |page|>
  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <HostCatalogs::HostCatalog::HostSets::New::Header
        @model={{@model}}
        @header={{PH}}
      />
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::HostSet
      @model={{@model}}
      @submit={{fn this.hostSets.save @model}}
      @cancel={{fn this.hostSets.cancel @model}}
    />
  </page.body>
</Rose::Layout::Page>