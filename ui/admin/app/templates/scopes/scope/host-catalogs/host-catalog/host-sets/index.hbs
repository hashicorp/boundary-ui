<Rose::Layout::Page class='hds-migration-overrides' as |page|>
  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <HostCatalogs::HostCatalog::Header
        @model={{@model.hostCatalog}}
        @header={{PH}}
      />
      <PH.Actions>
        <HostCatalogs::HostCatalog::Actions
          @model={{@model.hostCatalog}}
          @delete={{this.hostCatalogs.delete}}
        />
      </PH.Actions>
    </Hds::PageHeader>
  </page.header>

  <page.navigation>
    <HostCatalogs::HostCatalog::Navigation @model={{@model.hostCatalog}} />
  </page.navigation>

  <page.body>
    {{#if @model.hostSets}}

      <Hds::Table
        @model={{@model.hostSets}}
        @columns={{array
          (hash label=(t 'form.name.label'))
          (hash label=(t 'form.type.label'))
          (hash label=(t 'form.id.label'))
        }}
        @valign='middle'
      >
        <:body as |B|>
          <B.Tr>
            <B.Td>
              {{#if (can 'read model' B.data)}}
                <LinkTo
                  @route='scopes.scope.host-catalogs.host-catalog.host-sets.host-set'
                  @model={{B.data.id}}
                >
                  {{B.data.displayName}}
                </LinkTo>
              {{else}}
                <Hds::Text::Body @tag='p'>
                  {{B.data.displayName}}
                </Hds::Text::Body>
              {{/if}}
              <Hds::Text::Body @tag='p'>
                {{B.data.description}}
              </Hds::Text::Body>
            </B.Td>
            <B.Td>
              <HostCatalogTypeBadge @model={{B.data}} />
            </B.Td>
            <B.Td>
              <Hds::Copy::Snippet
                @color='secondary'
                @textToCopy={{B.data.id}}
              />
            </B.Td>
          </B.Tr>
        </:body>
      </Hds::Table>

    {{else}}
      <Rose::Layout::Centered>
        <Hds::ApplicationState as |A|>
          <A.Header @title={{t 'resources.host-set.messages.welcome.title'}} />
          <A.Body @text={{this.messageDescription}} />
          {{#if (can 'create model' this.hostCatalog collection='host-sets')}}
            <A.Footer as |F|>
              <F.LinkStandalone
                @icon='plus-circle'
                @text={{t 'titles.new'}}
                @route='scopes.scope.host-catalogs.host-catalog.host-sets.new'
              />
            </A.Footer>
          {{/if}}
        </Hds::ApplicationState>
      </Rose::Layout::Centered>

    {{/if}}
  </page.body>
</Rose::Layout::Page>