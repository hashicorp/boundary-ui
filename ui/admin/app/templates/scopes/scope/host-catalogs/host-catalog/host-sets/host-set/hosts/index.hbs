<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <HostCatalogs::HostCatalog::HostSets::HostSet::Header
      @model={{@model.hostSet}}
    />
  </page.header>

  <page.actions>
    <HostCatalogs::HostCatalog::HostSets::HostSet::Actions
      @model={{@model.hostSet}}
    />
  </page.actions>

  <page.navigation>
    <HostCatalogs::HostCatalog::HostSets::HostSet::Navigation
      @model={{@model}}
    />
  </page.navigation>

  <page.body>
    {{#if @model.hosts}}

      <Hds::Table @model={{@model.hosts}}>
        <:head as |H|>
          <H.Tr>
            {{#if @model.hostSet.isStatic}}
              <H.Th>{{t 'form.name.label'}}</H.Th>
            {{else}}
              <H.Th>{{t 'form.external_name.label'}}</H.Th>
            {{/if}}
            <H.Th>{{t 'form.type.label'}}</H.Th>
            <H.Th>{{t 'form.id.label'}}</H.Th>
            {{#if @model.hostSet.isStatic}}
              <H.Th>{{t 'titles.actions'}}</H.Th>
            {{/if}}
          </H.Tr>
        </:head>
        <:body as |B|>
          {{#each @model.hosts as |host|}}
            <B.Tr>
              <B.Td>
                {{#if host.isStatic}}
                  <LinkTo
                    @route='scopes.scope.host-catalogs.host-catalog.hosts.host'
                    @model={{host.id}}
                  >
                    {{host.displayName}}
                  </LinkTo>
                {{else}}
                  {{! Link to a different subroute for dynamic/plugin hosts }}
                  <LinkTo
                    @route='scopes.scope.host-catalogs.host-catalog.host-sets.host-set.hosts.host'
                    model={{host.id}}
                  >
                    {{host.displayName}}
                  </LinkTo>
                {{/if}}
                <Hds::Text:Body @tag='p'>{{host.description}}</Hds::Text:Body>
              </B.Td>
              <B.Td>
                <HostCatalogTypeBadge @model={{host}} />
              </B.Td>
              <B.Td>
                <Copyable
                  @text={{host.id}}
                  @buttonText={{t 'actions.copy-to-clipboard'}}
                  @acknowledgeText={{t 'states.copied'}}
                >
                  <Hds::Text::Code>{{host.id}}</Hds::Text::Code>
                </Copyable>
              </B.Td>
              <B.Td>
                {{#if (can 'removeHosts hostSet' @model.hostSet)}}
                  <Hds::Dropdown as |dd|>
                    <dd.ToggleIcon
                      @text={{t 'actions.manage'}}
                      @icon='more-horizontal'
                      @hasChevron={{false}}
                    />
                    <dd.Interactive
                      @text={{t 'actions.remove'}}
                      @color='critical'
                      {{on
                        'click'
                        (route-action 'removeHost' @model.hostSet host)
                      }}
                    />
                  </Hds::Dropdown>
                {{/if}}
              </B.Td>
            </B.Tr>
          {{/each}}
        </:body>
      </Hds::Table>

    {{/if}}

    {{#unless @model.hosts}}
      <Rose::Layout::Centered>
        <Rose::Message
          @title={{t 'resources.host-set.host.messages.none.title'}}
          as |message|
        >
          <message.description>
            {{t 'resources.host-set.host.messages.none.description'}}
          </message.description>
        </Rose::Message>
      </Rose::Layout::Centered>
    {{/unless}}
  </page.body>
</Rose::Layout::Page>
