<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <HostCatalogs::HostCatalog::HostSets::HostSet::Header
      @model={{@model.hostSet}}
    />
  </page.header>

  <page.actions>
    <HostCatalogs::HostCatalog::HostSets::HostSet::Actions
      @model={{@model.hostSet}}
      @delete={{this.hostSets.delete}}
    />
  </page.actions>

  <page.navigation>
    <HostCatalogs::HostCatalog::HostSets::HostSet::Navigation
      @model={{@model}}
    />
  </page.navigation>

  <page.body>
    {{#if @model.hosts}}
      {{#if (get @model.hostSet 'isStatic')}}
        <Hds::Table
          @model={{@model.hosts}}
          @columns={{array
            (hash label=(t 'form.name.label'))
            (hash label=(t 'form.type.label'))
            (hash label=(t 'form.id.label'))
            (hash label=(t 'titles.actions'))
          }}
          @valign='middle'
        >
          <:body as |B|>
            <B.Tr>
              <B.Td>
                <LinkTo
                  @route='scopes.scope.host-catalogs.host-catalog.hosts.host'
                  @model={{B.data.id}}
                >
                  {{B.data.displayName}}
                </LinkTo>
                <Hds::Text::Body @tag='p'>
                  {{B.data.description}}
                </Hds::Text::Body>
              </B.Td>
              <B.Td>
                <HostCatalogTypeBadge @model={{B.data}} />
              </B.Td>
              <B.Td>
                <Hds::Copy::Snippet
                  @textToCopy={{B.data.id}}
                  @color='secondary'
                />
              </B.Td>

              <B.Td>
                {{#if (can 'removeHosts hostSet' @model.hostSet)}}
                  <Hds::Dropdown as |dd|>
                    <dd.ToggleIcon
                      data-test-host-set-hosts-dropdown-toggle
                      @text={{t 'actions.manage'}}
                      @icon='more-horizontal'
                      @hasChevron={{false}}
                    />
                    <dd.Interactive
                      data-test-host-set-hosts-dropdown-remove-host
                      @text={{t 'actions.remove'}}
                      @color='critical'
                      {{on
                        'click'
                        (fn this.hostSets.removeHost @model.hostSet B.data)
                      }}
                    />
                  </Hds::Dropdown>
                {{/if}}
              </B.Td>

            </B.Tr>
          </:body>
        </Hds::Table>
      {{else}}
        <Hds::Table
          @model={{@model.hosts}}
          @columns={{array
            (hash label=(t 'form.external_name.label'))
            (hash label=(t 'form.type.label'))
            (hash label=(t 'form.id.label'))
          }}
          @valign='middle'
        >
          <:body as |B|>
            <B.Tr>
              <B.Td>
                <LinkTo
                  @route='scopes.scope.host-catalogs.host-catalog.host-sets.host-set.hosts.host'
                  @model={{B.data.id}}
                >
                  {{B.data.displayName}}
                </LinkTo>
                <Hds::Text::Body @tag='p'>
                  {{B.data.description}}
                </Hds::Text::Body>
              </B.Td>
              <B.Td>
                <HostCatalogTypeBadge @model={{B.data}} />
              </B.Td>
              <B.Td>
                <Hds::Copy::Snippet
                  @textToCopy={{B.data.id}}
                  @color='secondary'
                />
              </B.Td>
            </B.Tr>
          </:body>
        </Hds::Table>
      {{/if}}
    {{/if}}

    {{#unless @model.hosts}}
      <Rose::Layout::Centered>
        <Rose::Message
          @title={{t 'resources.host-set.host.messages.none.title'}}
          as |message|
        >
          <message.description>
            {{t 'resources.host-set.host.messages.none.description'}}
          </message.description>
        </Rose::Message>
      </Rose::Layout::Centered>
    {{/unless}}
  </page.body>
</Rose::Layout::Page>