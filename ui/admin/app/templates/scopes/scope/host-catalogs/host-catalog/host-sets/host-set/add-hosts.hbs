{{page-title (t 'resources.host-set.actions.add-hosts')}}
<Breadcrumbs::Item
  @text={{t 'resources.host-set.actions.add-hosts'}}
  @route='scopes.scope.host-catalogs.host-catalog.host-sets.host-set.add-hosts'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <BreadCrumbs />
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <HostCatalogs::HostCatalog::HostSets::HostSet::AddHosts::Header />
  </page.header>

  <page.body>
    <Form::HostSet::AddHosts
      @model={{@model.hostSet}}
      @hosts={{@model.hosts}}
      @submit={{route-action 'addHosts' @model.hostSet}}
      @cancel={{route-action 'cancel'}}
    />
  </page.body>
</Rose::Layout::Page>