<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <HostCatalogs::HostCatalog::Header @model={{@model}} @header={{PH}} />
      <PH.Actions>
        <HostCatalogs::HostCatalog::Actions
          @model={{@model}}
          @delete={{this.hostCatalogs.delete}}
        />
      </PH.Actions>
    </Hds::PageHeader>
  </page.header>

  <page.navigation>
    <HostCatalogs::HostCatalog::Navigation @model={{@model}} />
  </page.navigation>

  <page.body>
    <Form::HostCatalog
      @model={{@model}}
      @submit={{fn this.hostCatalogs.save @model}}
      @cancel={{fn this.hostCatalogs.cancel @model}}
      @changeCredentialType={{fn this.hostCatalogs.changeCredentialType @model}}
    />
  </page.body>
</Rose::Layout::Page>