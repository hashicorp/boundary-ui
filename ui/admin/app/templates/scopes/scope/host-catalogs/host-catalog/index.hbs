<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <HostCatalogs::HostCatalog::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <HostCatalogs::HostCatalog::Navigation @model={{@model}} />
  </page.navigation>

  <page.actions>
    <HostCatalogs::HostCatalog::Actions
      @model={{@model}}
      @delete={{this.hostCatalogs.delete}}
    />
  </page.actions>

  <page.body>
    <Form::HostCatalog
      @model={{@model}}
      @submit={{fn this.hostCatalogs.save @model}}
      @cancel={{fn this.hostCatalogs.cancel @model}}
    />
  </page.body>
</Rose::Layout::Page>