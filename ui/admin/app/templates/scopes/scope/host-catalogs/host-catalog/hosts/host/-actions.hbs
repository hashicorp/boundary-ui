{{#if (can 'delete model' @model)}}
  <Rose::Dropdown
    @text={{t 'actions.manage'}}
    @dropdownRight={{true}}
    as |dropdown|
  >
    <dropdown.button
      @style='danger'
      @disabled={{@model.canSave}}
      {{on 'click' (route-action 'deleteHost' @model)}}
    >
      {{t 'resources.host.actions.delete'}}
    </dropdown.button>
  </Rose::Dropdown>
{{/if}}