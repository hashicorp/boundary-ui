{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.host.titles.new'}}
  @route='scopes.scope.host-catalogs.host-catalog.hosts.new'
/>

<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <HostCatalogs::HostCatalog::Hosts::New::Header @header={{PH}} />
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::Host
      @model={{@model}}
      @submit={{fn this.hosts.save @model}}
      @cancel={{fn this.hosts.cancel @model}}
    />
  </page.body>
</Rose::Layout::Page>