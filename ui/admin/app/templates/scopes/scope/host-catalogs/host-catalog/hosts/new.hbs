{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.host.titles.new'}}
  @route='scopes.scope.host-catalogs.host-catalog.hosts.new'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <HostCatalogs::HostCatalog::Hosts::New::Header @model={{@model}} />
  </page.header>

  <page.body>
    <Form::Host
      @model={{@model}}
      @submit={{route-action 'save' @model}}
      @cancel={{route-action 'cancel' @model}}
    />
  </page.body>
</Rose::Layout::Page>