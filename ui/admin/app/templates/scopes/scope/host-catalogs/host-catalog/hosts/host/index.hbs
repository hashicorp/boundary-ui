<Rose::Layout::Page class='hds-migration-overrides' as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <HostCatalogs::HostCatalog::Hosts::Host::Header
        @model={{@model}}
        @header={{PH}}
      />
      <PH.Actions>
        <HostCatalogs::HostCatalog::Hosts::Host::Actions
          @model={{@model}}
          @delete={{this.hosts.delete}}
        />
      </PH.Actions>
    </Hds::PageHeader>
  </page.header>

  <page.navigation>
    <HostCatalogs::HostCatalog::Hosts::Host::Navigation />
  </page.navigation>

  <page.body>
    <Form::Host
      @model={{@model}}
      @submit={{fn this.hosts.save @model}}
      @cancel={{fn this.hosts.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>