<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <HostCatalogs::HostCatalog::Hosts::Host::Header @model={{@model}} />
  </page.header>

  <page.actions>
    <HostCatalogs::HostCatalog::Hosts::Host::Actions
      @model={{@model}}
      @delete={{this.hosts.delete}}
    />
  </page.actions>

  <page.navigation>
    <HostCatalogs::HostCatalog::Hosts::Host::Navigation />
  </page.navigation>

  <page.body>
    <Form::Host
      @model={{@model}}
      @submit={{fn this.hosts.save @model}}
      @cancel={{fn this.hosts.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>