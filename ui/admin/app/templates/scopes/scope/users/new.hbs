{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.user.titles.new'}}
  @route='scopes.scope.users.new'
/>

<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.user.titles.new'}}
        <DocLink @doc='user' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.user.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::User
      @model={{@model}}
      @ttl={{this.timeToLiveSeconds}}
      @tts={{this.timeToStaleSeconds}}
      @updateTTL={{this.updateTTL}}
      @updateTTS={{this.updateTTS}}
      @submit={{fn this.users.save @model}}
      @cancel={{fn this.users.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>