{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.user.titles.new'}}
  @route='scopes.scope.users.new'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display
      @tag='h2'
      @size='400'
      @weight='bold'
      class='header-spacing'
    >
      {{t 'resources.user.titles.new'}}
      <DocLink @doc='user' />
    </Hds::Text::Display>
    <Hds::Text::Body @tag='p' @size='300' class='p'>
      {{t 'resources.user.description'}}
    </Hds::Text::Body>
  </page.header>

  <page.body>
    <Form::User
      @model={{@model}}
      @submit={{fn this.users.save @model}}
      @cancel={{fn this.users.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>