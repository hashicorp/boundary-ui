{{page-title (t 'resources.user.actions.add-accounts')}}
<Breadcrumbs::Item
  @text={{t 'resources.user.actions.add-accounts'}}
  @route='scopes.scope.users.user.add-accounts'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display
      @tag='h2'
      @size='400'
      @weight='bold'
      class='header-spacing'
    >{{t 'resources.user.messages.add-accounts.title'}}</Hds::Text::Display>
    <Hds::Text::Body @tag='p' @size='300' class='p'>
      {{t 'resources.user.messages.add-accounts.description'}}
    </Hds::Text::Body>
  </page.header>

  <page.body>
    <Form::User::AddAccounts
      @model={{@model.user}}
      @authMethods={{@model.authMethods}}
      @accounts={{@model.accounts}}
      @submit={{fn this.addAccounts @model.user}}
      @cancel={{this.cancel}}
    />
  </page.body>

</Rose::Layout::Page>