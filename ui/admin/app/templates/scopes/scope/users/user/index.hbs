<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Users::User::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <Users::User::Nav @model={{@model}} />
  </page.navigation>

  <page.actions>
    <Users::User::Actions @model={{@model}} @delete={{this.users.delete}} />
  </page.actions>

  <page.body>
    <Form::User
      @model={{@model}}
      @submit={{fn this.users.save @model}}
      @cancel={{fn this.users.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>