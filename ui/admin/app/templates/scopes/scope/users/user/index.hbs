<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <Users::User::Header @model={{@model}} @header={{PH}} />
      <PH.Actions>
        <Users::User::Actions @model={{@model}} @delete={{this.users.delete}} />
      </PH.Actions>
    </Hds::PageHeader>
  </page.header>

  <page.navigation>
    <Users::User::Nav @model={{@model}} />
  </page.navigation>

  <page.body>
    <Form::User
      @model={{@model}}
      @submit={{fn this.users.save @model}}
      @cancel={{fn this.users.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>