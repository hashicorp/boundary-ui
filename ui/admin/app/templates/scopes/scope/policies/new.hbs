{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.policy.titles.new'}}
  @route='scopes.scope.policies.new'
/>

<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.policy.titles.new'}}
        <DocLink @doc='storage-policy.new' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.policy.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>

  <page.body>
    <Form::Policy
      @model={{@model}}
      @submit={{fn this.policies.save @model}}
      @cancel={{fn this.policies.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>