{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.policy.titles.new'}}
  @route='scopes.scope.policies.new'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.policy.titles.new'}}
      <DocLink @doc='storage-policy.new' @iconSize='large' />
    </h2>
    <p>{{t 'resources.policy.description'}}</p>
  </page.header>

  <page.body>
    <Form::Policy
      @model={{@model}}
      @submit={{fn this.policies.save @model}}
      @cancel={{fn this.policies.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>