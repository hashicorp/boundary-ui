{{page-title (t 'resources.worker.actions.create_tags')}}
<Breadcrumbs::Item
  @text={{t 'resources.worker.actions.create_tags'}}
  @route='scopes.scope.workers.worker.create-tags'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display
      @tag='h2'
      @size='400'
      @weight='bold'
      class='header-spacing'
    >
      {{t 'resources.worker.tags.create.title'}}
      <DocLink @doc='worker.create-tags' @iconSize='24' />
    </Hds::Text::Display>
    {{t 'resources.worker.tags.create.description'}}
    <Hds::Link::Inline @color='secondary' @href={{doc-url 'worker'}}>
      {{t 'resources.worker.tags.create.link'}}
    </Hds::Link::Inline>
  </page.header>

  <page.body>
    <Form::Worker::CreateTags
      @model={{@model}}
      @apiTags={{this.apiTags}}
      @submit={{this.save}}
      @cancel={{this.cancel}}
    />
  </page.body>
</Rose::Layout::Page>