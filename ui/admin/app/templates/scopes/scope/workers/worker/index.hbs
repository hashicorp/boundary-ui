<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Workers::Worker::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <Workers::Worker::Nav />
  </page.navigation>

  <page.actions>
    <Workers::Worker::Actions
      @model={{@model}}
      @delete={{this.workers.delete}}
    />
  </page.actions>

  <page.body>
    <Form::Worker
      @model={{@model}}
      @submit={{fn this.workers.save @model}}
      @cancel={{fn this.workers.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>