<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Workers::Worker::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <Workers::Worker::Nav />
  </page.navigation>

  <page.actions>
    <Rose::Dropdown
      @text={{t 'actions.manage'}}
      @dropdownRight={{true}}
      as |dropdown|
    >
      {{#if (can 'delete worker' @model)}}
        <dropdown.button
          @style='danger'
          @disabled={{@model.canSave}}
          {{on 'click' (fn this.workers.delete @model)}}
        >
          {{t 'resources.worker.actions.delete'}}
        </dropdown.button>
      {{/if}}
    </Rose::Dropdown>
  </page.actions>

  <page.body>
    <Form::Worker
      @model={{@model}}
      @submit={{fn this.workers.save @model}}
      @cancel={{fn this.workers.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>