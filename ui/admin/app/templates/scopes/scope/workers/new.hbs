{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.worker.titles.new'}}
  @route='scopes.scope.workers.new'
/>

<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.worker.titles.new'}}
        <DocLink @doc='worker' />
      </PH.Title>
    </Hds::PageHeader>
  </page.header>
  <page.body>
    <Form::Worker::CreateWorkerLed
      @model={{@model}}
      @cancel={{fn this.cancel @model.worker}}
      @submit={{fn this.createWorkerLed @model.worker}}
      @showBSide={{this.showBSide}}
      @toggleBSide={{this.toggleBSide}}
      @selectedTab={{this.selectedTab}}
      @tabSelectChange={{this.tabSelectChange}}
      @search={{this.search}}
      @types={{this.types}}
      @parentScope={{this.parent_scope}}
      @handleSearchInput={{this.handleSearchInput}}
      @applyFilter={{this.applyFilter}}
    />
  </page.body>

</Rose::Layout::Page>