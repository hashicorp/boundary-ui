{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.worker.titles.new'}}
  @route='scopes.scope.workers.new'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display @tag='h2' @size='400' @weight='bold'>
      {{t 'resources.worker.titles.new'}}
      <DocLink @doc='worker' />
    </Hds::Text::Display>
  </page.header>
  <page.body>
    <Form::Worker::CreateWorkerLed
      @model={{@model}}
      @cancel={{fn this.cancel @model}}
      @submit={{fn this.createWorkerLed @model}}
    />
  </page.body>

</Rose::Layout::Page>