{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.alias.titles.new'}}
  @route='scopes.scope.aliases.new'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display @tag='h2' @size='400' @weight='bold' class='header'>
      {{t 'resources.alias.titles.new'}}
      <DocLink @doc='alias' />
    </Hds::Text::Display>
    <Hds::Text::Body @tag='p' @size='300' class='p'>
      {{t 'resources.alias.description'}}
    </Hds::Text::Body>

  </page.header>
  <page.body>
    <Form::Alias
      @model={{@model}}
      @submit={{fn this.aliases.save @model}}
      @cancel={{fn this.aliases.cancel @model}}
    />
  </page.body>
</Rose::Layout::Page>