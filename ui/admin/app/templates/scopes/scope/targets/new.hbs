{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.target.titles.new'}}
  @route='scopes.scope.targets.new'
/>

<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.target.titles.new'}}
        <DocLink @doc='target.new' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.target.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>
  <page.body>
    <Form::Target
      @model={{@model}}
      @globalScope={{this.globalScope}}
      @submit={{fn this.targets.save @model}}
      @cancel={{fn this.targets.cancel @model}}
      @changeType={{this.targets.changeType}}
    />
  </page.body>

</Rose::Layout::Page>