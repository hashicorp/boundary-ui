{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.storage-bucket.titles.new'}}
  @route='scopes.scope.targets.target.enable-session-recording.create-storage-bucket'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display @tag='h2' @size='400' @weight='bold'>
      {{t 'resources.storage-bucket.titles.new'}}
      <DocLink @doc='storage-bucket' />
    </Hds::Text::Display>
  </page.header>

  <page.body>
    <Form::StorageBucket
      @model={{@model}}
      @submit={{fn this.save @model}}
      @cancel={{fn this.cancel @model}}
      @scopes={{this.scopes}}
      @changeCredentialType={{fn
        this.storageBuckets.changeCredentialType
        @model
      }}
      @changePluginType={{this.storageBuckets.changePluginType}}
    />
  </page.body>

</Rose::Layout::Page>