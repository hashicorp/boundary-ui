{{page-title (t 'resources.target.actions.add-host-sources')}}
<Breadcrumbs::Item
  @text={{t 'resources.target.actions.add-host-sources'}}
  @route='scopes.scope.targets.target.add-host-sources'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display @tag='h2' @size='400' @weight='bold'>
      {{t 'resources.target.host-source.messages.add.title'}}
      <DocLink @doc='target.add-host-sources' />
    </Hds::Text::Display>
    <Hds::Text::Body @tag='p' @size='300' class='p'>
      {{t 'resources.target.host-source.messages.add.description'}}
    </Hds::Text::Body>
  </page.header>

  <page.body>
    <Form::Target::AddHostSets
      @model={{@model.target}}
      @hostCatalogs={{@model.hostCatalogs}}
      @hostSets={{@model.hostSets}}
      @submit={{fn this.save @model.target}}
      @cancel={{this.cancel}}
    />
  </page.body>

</Rose::Layout::Page>