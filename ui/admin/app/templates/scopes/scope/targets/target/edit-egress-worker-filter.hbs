{{page-title (t 'resources.target.workers.edit-egress-worker-filter.title')}}
<Breadcrumbs::Item
  @text={{t 'resources.target.workers.edit-egress-worker-filter.title'}}
  @route='scopes.scope.targets.target.edit-egress-worker-filter'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>
  <page.header>
    <Hds::Text::Display
      @tag='h2'
      @size='400'
      @weight='bold'
      class='header-spacing'
    >
      {{t 'resources.target.workers.edit-egress-worker-filter.title'}}
      <DocLink @doc='worker-filters-format' @iconSize='large' />
    </Hds::Text::Display>
    <Hds::Text::Body @tag='p' @size='300' class='p'>
      {{t 'resources.target.workers.edit-egress-worker-filter.description'}}
    </Hds::Text::Body>
  </page.header>

  <page.body class='target-workers'>
    <Form::WorkerFilter
      @name='egress_worker_filter'
      @model={{@model}}
      @submit={{fn this.targets.saveWorkerFilter @model}}
      @cancel={{fn this.targets.cancelWorkerFilter @model}}
    />
  </page.body>

</Rose::Layout::Page>