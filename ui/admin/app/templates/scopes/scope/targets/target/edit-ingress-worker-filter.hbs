{{page-title (t 'resources.target.workers.edit-ingress-worker-filter.title')}}
<Breadcrumbs::Item
  @text={{t 'resources.target.workers.edit-ingress-worker-filter.title'}}
  @route='scopes.scope.targets.target.edit-ingress-worker-filter'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.target.workers.edit-ingress-worker-filter.title'}}
      <DocLink @doc='worker-filters-format' @iconSize='large' />
    </h2>
    <p>{{t
        'resources.target.workers.edit-ingress-worker-filter.description'
      }}</p>
  </page.header>

  <page.body class='target-workers'>
    <Form::WorkerFilter
      @name='ingress_worker_filter'
      @model={{@model}}
      @submit={{fn this.targets.saveWorkerFilter @model}}
      @cancel={{fn this.targets.cancelWorkerFilter @model}}
    />
  </page.body>

</Rose::Layout::Page>