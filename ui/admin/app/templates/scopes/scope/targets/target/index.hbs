<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Targets::Target::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <Targets::Target::Nav @model={{@model}} />
  </page.navigation>

  <page.actions>
    <Targets::Target::Actions @model={{@model}} />
  </page.actions>

  <page.body>
    <Rose::Layout::BodyContent as |bc|>
      <bc.Body>
        <Form::Target
          @model={{@model}}
          @submit={{route-action 'saveWithAddress' @model}}
          @cancel={{route-action 'cancel' @model}}
        />
      </bc.Body>

      <bc.Sidebar>
        <div class='target-sidebar-aliases'>
          <h3>{{t 'resources.alias.title_plural'}}</h3>
          <p class='description'>
            {{t 'resources.alias.form.sidebar.help'}}
          </p>
          {{#if @model.aliases}}
            {{#each this.aliases as |alias|}}
              <LinkListPanel as |P|>
                <P.Item
                  @icon='at-sign'
                  @color='boundary'
                  @text={{alias.value}}
                />
                <P.Item>
                  <Hds::Dropdown as |dd|>
                    <dd.ToggleIcon
                      @icon='more-horizontal'
                      @text={{t 'actions.manage'}}
                      @hasChevron={{false}}
                      @size='small'
                    />
                    <dd.Interactive
                      @route='scopes.scope.targets.target.manage-alias'
                      @model={{alias.id}}
                      @text={{t 'actions.manage'}}
                    />
                  </Hds::Dropdown>
                </P.Item>
              </LinkListPanel>
            {{/each}}

            {{#if this.showFlyoutBtn}}
              <Hds::Button
                data-test-view-more
                @text={{t 'resources.target.actions.view-more-aliases'}}
                @color='secondary'
                {{on 'click' this.targets.toggleFlyout}}
              />
            {{/if}}
            {{#if this.showFlyOutComponent}}
              <Hds::Flyout
                data-test-flyout
                @onClose={{this.toggleFlyout}}
                as |M|
              >
                <M.Header>
                  {{t
                    'resources.target.titles.aliases-flyout'
                    targetDisplayName=@model.displayName
                  }}
                </M.Header>

                <M.Body>
                  {{#each this.remainingAliases as |alias|}}
                    <LinkListPanel as |P|>
                      <P.Item
                        @icon='at-sign'
                        @color='boundary'
                        @text={{alias.value}}
                      />
                      <P.Item>
                        <Hds::Dropdown as |dd|>
                          <dd.ToggleIcon
                            @icon='more-horizontal'
                            @text={{t 'actions.manage'}}
                            @hasChevron={{false}}
                            @size='small'
                          />
                          <dd.Interactive
                            @route='scopes.scope.targets.target.manage-alias'
                            @model={{alias.id}}
                            @text={{t 'actions.manage'}}
                          />
                        </Hds::Dropdown>
                      </P.Item>
                    </LinkListPanel>
                  {{/each}}
                </M.Body>
              </Hds::Flyout>
            {{/if}}
          {{else}}
            <Hds::Button
              @icon='plus'
              @text={{t 'resources.target.actions.add-an-alias'}}
              @color='secondary'
              @route='scopes.scope.targets.target.create-alias'
            />
          {{/if}}
        </div>
        <div class='target-sidebar'>
          {{#if (and @model.isSSH (feature-flag 'ssh-session-recording'))}}
            <h3>{{t 'resources.target.form.sidebar.label'}}</h3>
            <p class='description'>
              {{t 'resources.target.form.sidebar.help'}}
            </p>
            {{#if @model.enable_session_recording}}
              <LinkListPanel as |P|>
                <P.Item
                  @icon='cloud-upload'
                  @color='boundary'
                  @text={{this.storage_bucket_name}}
                  @route='scopes.scope.storage-buckets.storage-bucket'
                  @model={{@model.storage_bucket_id}}
                >
                  <Hds::Badge
                    @text={{t 'resources.storage-bucket.types.aws_s3'}}
                    @icon='aws'
                  />
                </P.Item>
              </LinkListPanel>
              <Hds::Link::Standalone
                @icon='arrow-right'
                @iconPosition='trailing'
                @text={{t 'resources.target.form.sidebar.link'}}
                @route='scopes.scope.targets.target.enable-session-recording'
              />
            {{else}}
              <Hds::Button
                @text={{t 'resources.target.actions.enable-recording'}}
                @color='secondary'
                @route='scopes.scope.targets.target.enable-session-recording'
              />
            {{/if}}
          {{/if}}
        </div>
      </bc.Sidebar>
    </Rose::Layout::BodyContent>
  </page.body>
</Rose::Layout::Page>