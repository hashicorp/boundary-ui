{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.alias.titles.new'}}
  @route='scopes.scope.aliases.new'
/>

<Rose::Layout::Page as |page|>

  <page.header>
    <Hds::PageHeader as |PH|>
      <PH.Breadcrumb>
        <Breadcrumbs::Container />
      </PH.Breadcrumb>
      <PH.Title>
        {{t 'resources.alias.titles.new'}}
        <DocLink @doc='alias' />
      </PH.Title>
      <PH.Description>
        {{t 'resources.alias.description'}}
      </PH.Description>
    </Hds::PageHeader>
  </page.header>
  <page.body>
    <Form::Alias
      @model={{@model}}
      @hideTargetId='true'
      @submit={{fn this.targets.saveAlias @model}}
      @cancel={{fn this.targets.cancelAlias @model}}
    />
  </page.body>
</Rose::Layout::Page>