{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.alias.titles.new'}}
  @route='scopes.scope.aliases.new'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.alias.titles.new'}}
      <DocLink @doc='aliases' @iconSize='large' />
    </h2>
    <p>{{t 'resources.alias.description'}}</p>

  </page.header>
  <page.body>
    <Form::Alias
      @model={{@model}}
      @hideTargetId='true'
      @submit={{route-action 'save' @model}}
      @cancel={{route-action 'cancel' @model}}
    />
  </page.body>
</Rose::Layout::Page>