{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.alias.titles.new'}}
  @route='scopes.scope.aliases.new'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display
      @tag='h2'
      @size='400'
      @weight='bold'
      class='header-spacing'
    >
      {{t 'resources.alias.titles.new'}}
      <DocLink @doc='alias' @iconSize='large' />
    </Hds::Text::Display>
    <p>{{t 'resources.alias.description'}}</p>

  </page.header>
  <page.body>
    <Form::Alias
      @model={{@model}}
      @hideTargetId='true'
      @submit={{fn this.targets.saveAlias @model}}
      @cancel={{fn this.targets.cancelAlias @model}}
    />
  </page.body>
</Rose::Layout::Page>