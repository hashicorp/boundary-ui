<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Roles::Role::Header @model={{@model}} />
  </page.header>

  <page.actions>
    <Roles::Role::Actions @model={{@model}} @delete={{this.roles.delete}} />
  </page.actions>

  <page.navigation>
    <Roles::Role::Nav @model={{@model}} />
  </page.navigation>

  <page.body>
    <Form::Role
      @model={{@model}}
      @grantScopes={{this.grantScopes}}
      @submit={{fn this.roles.save @model}}
      @cancel={{fn this.roles.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>