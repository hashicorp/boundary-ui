{{page-title (t 'resources.role.grant.title_plural')}}
<Breadcrumbs::Item
  @text={{t 'resources.role.grant.title_plural'}}
  @route='scopes.scope.roles.role.grants'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.role.title'}}
      <DocLink @doc='role' @iconSize='large' />
    </h2>
    <p>{{t 'resources.role.grant.description'}}</p>
    <Hds::Copy::Snippet @textToCopy={{@model.id}} @color='secondary' />
  </page.header>

  <page.actions>
    <Roles::Role::Actions @model={{@model}} />
  </page.actions>

  <page.navigation>
    <Roles::Role::Nav @model={{@model}} />
  </page.navigation>

  <page.body>
    <Form::Role::Grants
      @model={{@model}}
      @submit={{route-action 'save' @model}}
      @cancel={{route-action 'cancel' @model}}
      @addGrant={{route-action 'addGrant' @model}}
      @removeGrant={{route-action 'removeGrant' @model}}
    />
  </page.body>

</Rose::Layout::Page>