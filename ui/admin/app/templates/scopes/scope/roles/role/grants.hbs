{{page-title (t 'resources.role.grant.title_plural')}}
<Breadcrumbs::Item
  @text={{t 'resources.role.grant.title_plural'}}
  @route='scopes.scope.roles.role.grants'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display
      @tag='h2'
      @size='400'
      @weight='bold'
      class='header-spacing'
    >
      {{t 'resources.role.title'}}
      <DocLink @doc='role' @iconSize='large' />
    </Hds::Text::Display>
    <Hds::Text::Body @tag='p' @size='300' class='p'>
      {{t 'resources.role.grant.description'}}
    </Hds::Text::Body>
    <Hds::Copy::Snippet @textToCopy={{@model.id}} @color='secondary' />
  </page.header>

  <page.actions>
    <Roles::Role::Actions @model={{@model}} @delete={{this.roles.delete}} />
  </page.actions>

  <page.navigation>
    <Roles::Role::Nav @model={{@model}} />
  </page.navigation>

  <page.body>
    <Form::Role::Grants
      @model={{@model}}
      @submit={{fn this.save @model}}
      @cancel={{fn this.cancel @model}}
      @addGrant={{fn this.addGrant @model}}
      @removeGrant={{fn this.removeGrant @model}}
    />
  </page.body>

</Rose::Layout::Page>