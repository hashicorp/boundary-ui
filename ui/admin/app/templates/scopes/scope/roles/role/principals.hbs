{{page-title (t 'resources.role.principal.title_plural')}}
<Breadcrumbs::Item
  @text={{t 'resources.role.principal.title_plural'}}
  @route='scopes.scope.roles.role.principals'
/>

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.role.title'}}
      <DocLink @doc='role' @iconSize='large' />
    </h2>
    <p>{{t 'resources.role.principal.description'}}</p>
    <Hds::Copy::Snippet @textToCopy={{@model.role.id}} @color='secondary' />
  </page.header>

  <page.actions>
    <Roles::Role::Actions
      @model={{@model.role}}
      @delete={{this.roles.delete}}
    />
  </page.actions>

  <page.navigation>
    <Roles::Role::Nav @model={{@model.role}} />
  </page.navigation>

  <page.body>
    {{#if @model.principals}}

      <Hds::Table
        @model={{@model.principals}}
        @columns={{array
          (hash label=(t 'form.name.label'))
          (hash label=(t 'form.id.label'))
          (hash label=(t 'form.type.label'))
          (hash label=(t 'resources.scope.title'))
          (hash label=(t 'titles.actions'))
        }}
        @valign='middle'
      >
        <:body as |B|>
          <B.Tr>
            <B.Td>
              {{#if (can 'readPrincipal role' B.data)}}
                <LinkToPrincipal @model={{B.data}} />
              {{else}}
                {{B.data.displayName}}
              {{/if}}
              {{#if B.data.accountName}}
                <br /><Hds::Badge @text={{B.data.accountName}} />
              {{/if}}
            </B.Td>
            <B.Td>
              <Hds::Copy::Snippet
                @textToCopy={{B.data.id}}
                @color='secondary'
              />
            </B.Td>
            <B.Td>
              <PrincipalTypeBadge @model={{B.data}} />
            </B.Td>
            <B.Td>
              <ScopeBadge @scope={{B.data.scopeModel}} />
            </B.Td>
            <B.Td>
              {{#if (can 'removePrincipals role' @model.role)}}
                <Hds::Dropdown as |dd|>
                  <dd.ToggleIcon
                    @icon='more-horizontal'
                    @text={{t 'actions.manage'}}
                    @hasChevron={{false}}
                  />
                  <dd.Interactive
                    @color='critical'
                    @text={{t 'actions.remove'}}
                    {{on
                      'click'
                      (fn this.roles.removePrincipal @model.role B.data)
                    }}
                  />
                </Hds::Dropdown>
              {{/if}}
            </B.Td>
          </B.Tr>
        </:body>
      </Hds::Table>

    {{else}}

      <Rose::Layout::Centered>
        <Rose::Message
          @title={{t 'resources.role.principal.messages.welcome.title'}}
          as |message|
        >
          <message.description>
            {{t 'resources.role.principal.messages.welcome.description'}}
          </message.description>
          <message.link @route='scopes.scope.roles.role.add-principals'>
            <Rose::Icon @name='flight-icons/svg/plus-circle-16' />
            {{t 'resources.role.principal.actions.add-principals'}}
          </message.link>
        </Rose::Message>
      </Rose::Layout::Centered>

    {{/if}}
  </page.body>

</Rose::Layout::Page>