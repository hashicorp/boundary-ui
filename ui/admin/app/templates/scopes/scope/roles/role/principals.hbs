{{page-title (t 'resources.role.principal.title_plural')}}

<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.role.title'}}
      <DocLink @doc='role' @iconSize='large' />
    </h2>
    <p>{{t 'resources.role.principal.description'}}</p>
    <Copyable
      @text={{@model.role.id}}
      @buttonText={{t 'actions.copy-to-clipboard'}}
      @acknowledgeText={{t 'states.copied'}}
    >
      <code>{{@model.role.id}}</code>
    </Copyable>
  </page.header>

  <page.actions>
    <Roles::Role::Actions @model={{@model.role}} />
  </page.actions>

  <page.navigation>
    <Roles::Role::Nav @model={{@model.role}} />
  </page.navigation>

  <page.body>
    {{#if @model.principals}}

      <Rose::Table as |table|>
        <table.header as |header|>
          <header.row as |row|>
            <row.headerCell>{{t 'form.name.label'}}</row.headerCell>
            <row.headerCell>{{t 'form.id.label'}}</row.headerCell>
            <row.headerCell>{{t 'form.type.label'}}</row.headerCell>
            <row.headerCell>{{t 'resources.scope.title'}}</row.headerCell>
            <row.headerCell>{{t 'titles.actions'}}</row.headerCell>
          </header.row>
        </table.header>
        <table.body as |body|>
          {{#each @model.principals as |principal|}}
            <body.row as |row|>
              <row.headerCell>
                {{principal.displayName}}
                {{#if principal.accountName}}
                  <br /><Rose::Badge>{{principal.accountName}}</Rose::Badge>
                {{/if}}
              </row.headerCell>
              <row.cell>
                <Copyable
                  @text={{principal.id}}
                  @buttonText={{t 'actions.copy-to-clipboard'}}
                  @acknowledgeText={{t 'states.copied'}}
                >
                  <code>{{principal.id}}</code>
                </Copyable>
              </row.cell>
              <row.cell>
                <Rose::Badge
                  @icon={{if
                    (eq principal.constructor.modelName 'group')
                    'flight-icons/svg/folder-users-16'
                    'flight-icons/svg/user-16'
                  }}
                >
                  {{t
                    (concat
                      'resources.role.principal.types.'
                      principal.constructor.modelName
                    )
                  }}
                </Rose::Badge>
              </row.cell>
              <row.cell>
                <ScopeBadge @scope={{principal.scopeModel}} />
              </row.cell>
              <row.cell>
                {{#if (can 'removePrincipals role' @model.role)}}
                  <Rose::Dropdown
                    @icon='flight-icons/svg/more-horizontal-16'
                    @iconOnly={{true}}
                    @showCaret={{false}}
                    @dropdownRight={{true}}
                    @text='{{t 'actions.manage'}}'
                    as |dropdown|
                  >
                    <dropdown.button
                      @style='danger'
                      {{on 'click' (route-action 'removePrincipal' principal)}}
                    >
                      {{t 'actions.remove'}}
                    </dropdown.button>
                  </Rose::Dropdown>
                {{/if}}
              </row.cell>
            </body.row>
          {{/each}}
        </table.body>
      </Rose::Table>

    {{else}}

      <Rose::Layout::Centered>
        <Rose::Message
          @title={{t 'resources.role.principal.messages.welcome.title'}}
          as |message|
        >
          <message.description>
            {{t 'resources.role.principal.messages.welcome.description'}}
          </message.description>
          <message.link @route='scopes.scope.roles.role.add-principals'>
            <Rose::Icon @name='flight-icons/svg/plus-circle-16' />
            {{t 'resources.role.principal.actions.add-principals'}}
          </message.link>
        </Rose::Message>
      </Rose::Layout::Centered>

    {{/if}}
  </page.body>

</Rose::Layout::Page>