<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <h2>
      {{t 'resources.role.scope.messages.manage-scopes.title'}}
      <DocLink @doc='role.add-grant-scopes' @iconSize='large' />
    </h2>
    <p>{{t 'resources.role.scope.messages.manage-scopes.description'}}</p>
  </page.header>

  <page.body>
    <Form::Role::ManageScopes
      @model={{@model}}
      @showCheckIcon={{this.showCheckIcon}}
      @selectedItems={{this.selectedItems}}
      @submit={{fn this.setGrantScopes @model}}
      @cancel={{fn this.cancel @model.grant_scope_ids}}
    />
  </page.body>

</Rose::Layout::Page>