<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display @tag='h2' @size='400' @weight='bold' class='header'>
      {{t 'resources.role.scope.messages.manage-scopes.title'}}
      <DocLink @doc='role.add-grant-scopes' />
    </Hds::Text::Display>
    <Hds::Text::Body @tag='p' @size='300' class='p'>
      {{t 'resources.role.scope.messages.manage-scopes.description'}}
    </Hds::Text::Body>
  </page.header>

  <page.body>
    <Form::Role::ManageScopes
      @model={{@model}}
      @showCheckIcon={{this.showCheckIcon}}
      @submit={{fn this.setGrantScopes @model}}
      @cancel={{fn this.cancel @model}}
    />
  </page.body>

</Rose::Layout::Page>