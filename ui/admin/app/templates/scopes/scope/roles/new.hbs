{{page-title (t 'titles.new')}}
<Breadcrumbs::Item
  @text={{t 'resources.role.titles.new'}}
  @route='scopes.scope.roles.new'
/>

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <Breadcrumbs::Container />
  </page.breadcrumbs>

  <page.header>
    <Hds::Text::Display @tag='h2' @size='400' @weight='bold'>
      {{t 'resources.role.titles.new'}}
      <DocLink @doc='role' />
    </Hds::Text::Display>
    <Hds::Text::Body @tag='p' @size='300' class='p'>
      {{t 'resources.role.description'}}
    </Hds::Text::Body>
  </page.header>

  <page.body>
    <Form::Role
      @model={{@model}}
      @submit={{fn this.roles.save @model}}
      @cancel={{fn this.roles.cancel @model}}
    />
  </page.body>
</Rose::Layout::Page>