{{page-title (t 'help.title')}}
<Breadcrumbs::Item
  @text='Boundary'
  @icon='boundary-color'
  @route='scopes.scope'
  @model='global'
/>

<Breadcrumbs::Item @text={{t 'help.title'}} @icon='help' @route='help' />

<Rose::Layout::Sidebar as |sidebarLayout|>
  <sidebarLayout.sidebar>
    <Rose::Nav::Sidebar @title={{t 'help.titles.back'}} as |nav|>
      <nav.link @route='scopes.scope' @model='global'>
        <Rose::Icon @name='flight-icons/svg/chevron-left-16' @size='medium' />
        {{t 'help.titles.back'}}
      </nav.link>
    </Rose::Nav::Sidebar>
  </sidebarLayout.sidebar>

  <sidebarLayout.body>
    <main>
      <Rose::Layout::Page as |page|>
        <page.breadcrumbs>
          <Breadcrumbs::Container />
        </page.breadcrumbs>

        <page.header>
          <h2>{{t 'help.page.title'}}</h2>
          <p>{{t 'help.page.description'}}</p>
        </page.header>

        <page.body class='boundary-help-page'>
          <div class='search-bar'>
            <Hds::SegmentedGroup as |S|>
              <S.TextInput
                @value={{this.query}}
                @type='search'
                disabled={{this.currentlyLoading}}
                placeholder={{t 'actions.search'}}
                aria-label={{t 'actions.search'}}
                {{on 'keydown' this.handleSearchInput}}
                {{on 'input' this.handleSearchInput}}
              />
            </Hds::SegmentedGroup>
          </div>
          {{outlet}}
        </page.body>
      </Rose::Layout::Page>
    </main>
  </sidebarLayout.body>
  <sidebarLayout.footer>
    <Hds::AppFooter @theme={{this.session.data.theme}} as |AF|>
      <AF.Link @href={{(doc-url)}}>{{t 'titles.documentation'}}</AF.Link>
      <AF.LegalLinks />
    </Hds::AppFooter>
  </sidebarLayout.footer>
</Rose::Layout::Sidebar>