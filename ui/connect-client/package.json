{
  "name": "connect-client",
  "version": "0.0.0",
  "description": "Client UI for Project Watchtower.",
  "license": "MPL-2.0",
  "author": "HashiCorp",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "doc:toc": "doctoc README.md",
    "build": "ember build --environment=production",
    "build:development": "ember build",
    "lint": "yarn lint:hbs && yarn lint:js && yarn lint:sass",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "lint:sass": "sass-lint -v -q",
    "format": "yarn format:js && npm run format:sass",
    "format:js": "prettier --write '{app,config,stories,tests}/**/*.js' *.js",
    "format:sass": "prettier --write app/**/*.scss",
    "start": "ember serve",
    "start:desktop": "ember electron",
    "clean:coverage": "rm -rf coverage_*",
    "pretest": "yarn clean:coverage",
    "test": "COVERAGE=true ember exam --random",
    "postinstall": "cd electron-app && yarn install",
    "posttest": "ember coverage-merge && yarn clean:coverage"
  },
  "devDependencies": {
    "@ember/optional-features": "^1.3.0",
    "@glimmer/component": "^1.0.0",
    "@glimmer/tracking": "^1.0.0",
    "babel-eslint": "^10.0.3",
    "broccoli-asset-rev": "^3.0.0",
    "doctoc": "^1.4.0",
    "ember-auto-import": "^1.5.3",
    "ember-cli": "~3.16.2",
    "ember-cli-app-version": "^3.2.0",
    "ember-cli-babel": "^7.17.2",
    "ember-cli-code-coverage": "^1.0.0-beta.9",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-eslint": "^5.1.0",
    "ember-cli-htmlbars": "^4.2.2",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-mirage": "^1.1.7",
    "ember-cli-sass": "^10.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-template-lint": "^1.0.0-beta.3",
    "ember-cli-uglify": "^3.0.0",
    "ember-data": "~3.16.0",
    "ember-electron": "https://github.com/adopted-ember-addons/ember-electron#v3.0.0-beta.3",
    "ember-exam": "^5.0.1",
    "ember-export-application-global": "^2.0.1",
    "ember-fetch": "^7.0.0",
    "ember-intl": "^5.2.0",
    "ember-load-initializers": "^2.1.1",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-qunit": "^4.6.0",
    "ember-resolver": "^7.0.0",
    "ember-source": "~3.16.0",
    "ember-welcome-page": "^4.0.0",
    "eslint-plugin-ember": "^7.7.2",
    "eslint-plugin-node": "^11.0.0",
    "loader.js": "^4.7.0",
    "prettier": "^2.0.5",
    "qunit-dom": "^1.0.0",
    "sass": "^1.26.5",
    "sass-lint": "^1.13.1"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "ember": {
    "edition": "octane"
  }
}
