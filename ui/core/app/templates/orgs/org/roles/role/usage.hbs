<Rose::Table as |table|>
  <table.header as |header|>
    <header.row as |row|>
      <row.cell>{{t 'form.label.name'}}</row.cell>
      <row.cell>{{t 'form.label.type'}}</row.cell>
    </header.row>
  </table.header>
  <table.body as |body|>
    {{#each @model.groups as |group|}}
      <body.row as |row|>
        <row.cell>
          {{group.name}}
        </row.cell>
        <row.cell>{{t 'resources.group'}}</row.cell>
      </body.row>
    {{/each}}
    {{#each @model.users as |user|}}
      <body.row as |row|>
        <row.cell>
          {{user.name}}
        </row.cell>
        <row.cell>{{t 'resources.user'}}</row.cell>
      </body.row>
    {{/each}}
  </table.body>
</Rose::Table>
