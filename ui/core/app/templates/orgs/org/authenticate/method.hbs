<Rose::Form
  @onSubmit={{route-action "authenticate" (hash username=this.username password=this.password)}}
  @cancel={{false}}
  as |form|
>

  <form.input
    name="username"
    @type="text"
    @value={{this.username}}
    @label={{t "form.label.username"}} />

  <form.input
    name="password"
    @type="password"
    @value={{this.password}}
    @label={{t "form.label.password"}} />

  <form.actions
    @submitText={{t "actions.save"}}
    @showCancel={{false}} />

</Rose::Form>
