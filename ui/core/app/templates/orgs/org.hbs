<Rose::Layout::Sidebar as |sidebarLayout|>

  <sidebarLayout.sidebar>

    <Rose::Nav::Sidebar @title={{t "titles.general"}} as |nav|>
      <nav.link @route="orgs.org.projects">
        {{t "resources.projects"}}
      </nav.link>
    </Rose::Nav::Sidebar>

    {{outlet "sidebar"}}

    <Rose::Nav::Sidebar @title={{t "titles.iam"}} as |nav|>
      <nav.link @route="orgs.org.roles">
        {{t "resources.roles"}}
      </nav.link>
    </Rose::Nav::Sidebar>

  </sidebarLayout.sidebar>

  <sidebarLayout.body>
    <main>
      {{outlet}}
    </main>
  </sidebarLayout.body>

</Rose::Layout::Sidebar>
