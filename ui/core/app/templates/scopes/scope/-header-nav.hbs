<Rose::Dropdown
  @text={{this.scopes.selectedOrg.displayName}}
  @icon="app-icons/org" as |dropdown|
>
  {{#if this.session.data.authenticated.isGlobal}}
    <dropdown.link @route="scopes.scope" @model="global">
      {{t "titles.global"}}
    </dropdown.link>
    <dropdown.separator />
  {{/if}}
  {{#each this.scopes.orgs as |scope|}}
    <dropdown.link @route="scopes.scope" @model={{scope.id}}>
      {{scope.displayName}}
    </dropdown.link>
  {{/each}}
</Rose::Dropdown>

{{#if this.scopes.selectedProject}}
  <Rose::Dropdown
    @text={{this.scopes.selectedProject.displayName}}
    @icon="app-icons/project" as |dropdown|
  >
    {{#each this.scopes.projects as |scope|}}
      <dropdown.link @route="scopes.scope" @model={{scope.id}}>
        {{scope.displayName}}
      </dropdown.link>
    {{/each}}
  </Rose::Dropdown>
{{/if}}
