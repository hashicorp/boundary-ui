{{page-title (app-name)}}

<Rose::Layout::Global as |layout|>

  <layout.header>
    <Rose::Header class="{{if (is-loading) " loading"}}" as |header|>
      <header.brand @logo="logo-app" @text={{app-name}} />

      {{#if this.session.isAuthenticated}}
        <header.nav>

          {{outlet "header-nav"}}

        </header.nav>

        <header.utilities as |utilities|>
          <utilities.dropdown
            @text={{this.session.data.authenticated.username}}
            @icon="app-icons/user-profile" as |dropdown|
          >
            <dropdown.link @route="account.change-password">
              {{t 'actions.change-password'}}
            </dropdown.link>
            <dropdown.separator />

            <dropdown.button
              {{on "click" (route-action "invalidateSession")}}
            >
              {{t 'actions.deauthenticate'}}
            </dropdown.button>

            <dropdown.separator />

            <dropdown.section @title={{t "titles.toggle-color-theme"}}>
              <Rose::Form as |form|>
                <form.radioGroup
                  @name="theme"
                  @selectedValue={{this.session.data.theme}}
                  @changed={{route-action "toggleTheme"}}
                as |radioGroup|>
                  <dropdown.item>
                    <radioGroup.radio @label={{t "themes.system"}} />
                  </dropdown.item>
                  <dropdown.item>
                    <radioGroup.radio @label={{t "themes.light"}} @value="light" />
                  </dropdown.item>
                  <dropdown.item>
                    <radioGroup.radio @label={{t "themes.dark"}} @value="dark" />
                  </dropdown.item>
                </form.radioGroup>
              </Rose::Form>
            </dropdown.section>

          </utilities.dropdown>
        </header.utilities>

      {{/if}}

    </Rose::Header>
  </layout.header>

  <layout.body>
    {{outlet}}
  </layout.body>

  <layout.footer>
    <Rose::Footer as |footer|>
      <footer.brand @logo="logo-company" @text={{company-name}} />
      <footer.text>{{company-copyright}}</footer.text>
      <footer.text>{{app-name}}</footer.text>
      <footer.nav as |nav|>
        <nav.link @href={{doc-url}}>
          {{t "titles.documentation"}}
        </nav.link>
      </footer.nav>
    </Rose::Footer>
  </layout.footer>

</Rose::Layout::Global>

<EmberNotify @closeAfter={{this.notifyTimeout}} as |message close|>
  <Rose::Notification
    @style={{message.type}}
    @heading={{t (concat 'states.' message.type)}}
    @dismiss={{close}}
    @dismissText={{t 'actions.dismiss'}}
  >
    {{message.text}}
  </Rose::Notification>
</EmberNotify>

<PendingConfirmations as |confirmation accept deny|>
  {{#if confirmation.options.isAbandonConfirm}}
    <Rose::Dialog
      @heading={{t "titles.abandon-confirm"}}
      @dismissButtonText={{t "actions.cancel"}}
      @icon="alert-triangle"
      @style="warning"
      @modal={{true}}
      @dismiss={{deny}}
    as |dialog|>
      <dialog.body>
        <p>{{t "questions.abandon-confirm"}}</p>
      </dialog.body>
      <dialog.footer>
        <Rose::Button @style="primary" {{on "click" accept}}>
          {{t "actions.discard"}}
        </Rose::Button>
        <Rose::Button @style="secondary" {{on "click" deny}}>
          {{t "actions.cancel"}}
        </Rose::Button>
      </dialog.footer>
    </Rose::Dialog>
  {{else}}
    <Rose::Dialog
      @heading={{t "actions.confirm"}}
      @dismissButtonText={{t "actions.cancel"}}
      @icon="alert-triangle"
      @style="warning"
      @modal={{true}}
      @dismiss={{deny}}
    as |dialog|>
      <dialog.body>
        <p>{{confirmation.text}}</p>
      </dialog.body>
      <dialog.footer>
        <Rose::Button @style="primary" {{on "click" accept}}>
          {{t "actions.ok"}}
        </Rose::Button>
        <Rose::Button @style="secondary" {{on "click" deny}}>
          {{t "actions.cancel"}}
        </Rose::Button>
      </dialog.footer>
    </Rose::Dialog>
  {{/if}}
</PendingConfirmations>
