<Rose::Form
  @onSubmit={{fn this.submit @submit}}
  @cancel={{fn this.cancel @cancel}}
  @disabled={{@model.isSaving}}
  @error={{@model.errors.base}}
  as |form|
>

  <form.input
    @name="password"
    @type="password"
    @value={{this.password}}
    @label={{t "form.set_password.label"}}
    @error={{@model.errors.password}}
    @helperText={{t "form.set_password.help"}}
    readonly={{false}}
    autocomplete="new-password"
  as |field|>
    {{#if @model.errors.password}}
      <field.errors as |errors|>
        {{#each @model.errors.password as |error|}}
          <errors.message>{{error.message}}</errors.message>
        {{/each}}
      </field.errors>
    {{/if}}
  </form.input>

  <form.actions
    @disabled={{this.cannotSave}}
    @submitText={{t "actions.save"}}
    @cancelText={{t "actions.cancel"}} />

</Rose::Form>