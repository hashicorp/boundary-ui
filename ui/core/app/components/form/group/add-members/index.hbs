{{#if this.availableUsers}}
  <Rose::Form
    class="full-width"
    @onSubmit={{fn this.submit @submit}}
    @cancel={{@cancel}}
    @disabled={{@model.isSaving}}
    @error={{@model.errors.base}}
    as |form|
  >

    <form.actions
      @submitText={{t "actions.add-host-sets"}}
      @cancelText={{t "actions.cancel"}} />

    <Rose::Table as |table|>
      <table.header as |header|>
        <header.row as |row|>
          <row.headerCell>{{t 'form.label.id'}}</row.headerCell>
          <row.headerCell>{{t 'form.label.name'}}</row.headerCell>
        </header.row>
      </table.header>
      <table.body as |body|>
        {{#each this.availableUsers as |user|}}
          <body.row as |row|>
            <row.cell>
              <form.checkbox
                @label={{user.id}}
                @description={{user.description}}
                onChange={{fn this.toggleMember user}} />
            </row.cell>
            <row.cell>{{user.name}}</row.cell>
          </body.row>
        {{/each}}
      </table.body>
    </Rose::Table>

  </Rose::Form>
{{/if}}

{{#unless this.availableUsers}}
  <Rose::Layout::Centered>
     <Rose::Message @title={{t "titles.no-available-users"}} as |message|>
       <message.description>
         {{t "descriptions.no-available-users"}}
       </message.description>
     </Rose::Message>
   </Rose::Layout::Centered>
{{/unless}}
