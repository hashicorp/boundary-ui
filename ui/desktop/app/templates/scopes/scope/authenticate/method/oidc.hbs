<Hds::ApplicationState @align='center' as |A|>
  <A.Media>
    <Image @name='auth-pending' />
  </A.Media>
  <A.Header @title={{t 'resources.auth-method.messages.pending.title'}} />
  <A.Body @text={{t 'resources.auth-method.messages.pending.description'}} />
  <A.Footer as |F|>
    <F.Button
      @text={{t 'resources.auth-method.actions.no-new-window-retry'}}
      @color='primary'
      {{on 'click' this.retryAuthentication}}
    />
    <F.Button
      @text={{t 'actions.cancel'}}
      @color='secondary'
      {{on 'click' this.cancelAuthentication}}
    />
  </A.Footer>
</Hds::ApplicationState>