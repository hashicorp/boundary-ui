<Rose::Layout::Page class='settings-card' as |page|>
  <page.header>
    <Hds::Text::Display
      @tag='h2'
      @size='400'
      @weight='bold'
      class='header-spacing'
    >
      {{t 'titles.settings'}}
      {{! TODO: Add a link to the settings documentation }}
      {{! <DocLink @doc='setting' @iconSize='large' /> }}
    </Hds::Text::Display>
  </page.header>
  <page.body>
    {{outlet}}
  </page.body>
</Rose::Layout::Page>