<main>
  <BrandedCard
    @title={{t 'titles.welcome-to-boundary'}}
    @description={{t 'descriptions.origin-initialization'}}
  >
    <Rose::Form
      class='full-width'
      @onSubmit={{route-action 'setClusterUrl' this.origin}}
      @cancel={{false}}
      @disabled={{(is-loading)}}
      as |form|
    >
      <form.input
        @name='host'
        @type='text'
        @value={{this.origin}}
        @label={{t 'form.origin.label'}}
        @helperText={{t 'form.origin.description'}}
        {{autofocus}}
      />
      <form.actions @submitText={{t 'actions.submit'}} @showCancel={{false}} />
    </Rose::Form>
  </BrandedCard>
</main>
