<main>
  <BrandedCard
    @title={{t 'titles.welcome-to-boundary'}}
    @description={{t 'descriptions.cluster-url-initialization'}}
  >
    <Rose::Form
      class='full-width'
      @onSubmit={{route-action 'setClusterUrl' this.clusterUrl}}
      @cancel={{false}}
      @disabled={{(is-loading)}}
      as |form|
    >
      <Hds::Form::TextInput::Field
        name='host'
        @value={{this.clusterUrl}}
        {{autofocus}}
        {{on 'input' (set-from-event this 'clusterUrl')}}
        as |F|
      >
        <F.Label>{{t 'form.cluster-url.label'}}</F.Label>
        <F.HelperText>{{t 'form.cluster-url.description'}}</F.HelperText>
      </Hds::Form::TextInput::Field>

      <form.actions>
        <:actions>
          <Hds::Button
            @text={{t 'actions.submit'}}
            @isFullWidth={{true}}
            disabled={{form.disabled}}
            type='submit'
          />
        </:actions>
      </form.actions>
    </Rose::Form>
  </BrandedCard>
</main>