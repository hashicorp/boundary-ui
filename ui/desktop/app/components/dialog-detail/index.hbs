<Rose::Dialog
  class='dialog-detail'
  @heading={{@heading}}
  @dismiss={{@dismiss}}
  @dismissButtonText={{@dismissButtonText}}
  @modal={{true}}
  as |dialog|
>
  {{#if @notification}}
    <Rose::Notification
      @style={{@notificationStyle}}
      @heading={{@notification}}
    />
  {{/if}}

  <dialog.body>
    {{yield to='body'}}
  </dialog.body>
  <dialog.footer>
    {{yield to='footer'}}
  </dialog.footer>
</Rose::Dialog>