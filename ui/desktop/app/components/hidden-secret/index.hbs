<div class='hidden-secret'>
  <Rose::Button
    @style='ghost'
    @iconOnly={{if
      this.isHidden
      'flight-icons/svg/eye-16'
      'flight-icons/svg/eye-off-16'
    }}
    {{on 'click' this.toggleSecretVisibility}}
  >
    {{t 'actions.toggle-secret'}}
  </Rose::Button>
  <Copyable
    @text={{this.displaySecretValue}}
    @buttonText={{t 'actions.copy-to-clipboard'}}
    @acknowledgeText={{t 'states.copied'}}
  >
    {{#if this.isHidden}}
      <pre>{{this.displaySecretValue}}</pre>
    {{else}}
      <span class='secret-mask'>{{this.textMask}}</span>
    {{/if}}
  </Copyable>
</div>