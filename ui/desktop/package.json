{
  "name": "desktop",
  "version": "0.0.0",
  "private": true,
  "description": "Client UI for Boundary.",
  "license": "MPL-2.0",
  "author": "HashiCorp",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "doc:toc": "doctoc README.md",
    "build": "yarn build:production && yarn build:desktop",
    "build:production": "cross-env EMBER_CLI_ELECTRON=true ember build --environment=production",
    "build:development": "ember build",
    "prebuild:desktop": "shx rm -rf electron-app/ember-dist && shx cp -r dist/ electron-app/ember-dist/",
    "build:desktop": "yarn build:desktop:install && yarn --cwd electron-app make",
    "build:desktop:debianOnMacOS": "yarn build:desktop:install && BUILD_DEBIAN=true yarn --cwd electron-app make --platform linux --arch x64",
    "build:desktop:install": "yarn install --cwd electron-app",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sass": "stylelint '**/*.scss'",
    "lint:sass:fix": "stylelint '**/*.scss' --fix",
    "lint:electron": "electronegativity -r -i ./electron-app",
    "format": "npm-run-all format:*",
    "format:hbs": "prettier --write 'app/**/*.hbs'",
    "format:js": "prettier --write '{app,config,stories,tests,electron-app/src}/**/*.js' *.js",
    "format:sass": "prettier --write app/**/*.scss",
    "start": "ember serve --port 4201",
    "prestart:desktop": "cd electron-app && yarn premake",
    "start:desktop": "ember electron",
    "clean:coverage": "rm -rf coverage_*",
    "pretest": "yarn clean:coverage",
    "test": "npm-run-all test:*",
    "test:ember": "cross-env COVERAGE=true ember exam --test-port 0 --split=4 --parallel=1 --random",
    "e2e": "yarn run build && yarn run e2e:dev",
    "e2e:dev": "npx playwright test --headed",
    "postinstall": "cd electron-app && yarn install",
    "posttest": "ember coverage-merge && yarn clean:coverage"
  },
  "dependencies": {
    "ember-named-blocks-polyfill": "^0.2.5",
    "uuid": "^9.0.0",
    "xterm": "^5.2.1",
    "xterm-addon-canvas": "^0.5.0",
    "xterm-addon-fit": "^0.7.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-proposal-decorators": "^7.18.6",
    "@doyensec/electronegativity": "^1.10.2",
    "@ember/optional-features": "^2.0.0",
    "@ember/render-modifiers": "^2.0.4",
    "@ember/test-helpers": "^2.8.1",
    "@embroider/macros": "^1.13.1",
    "@faker-js/faker": "^8.0.2",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "@playwright/test": "^1.30.0",
    "babel-loader": "^8.2.5",
    "broccoli-asset-rev": "^3.0.0",
    "clipboard": "^2.0.8",
    "core": "*",
    "cross-env": "^7.0.3",
    "doctoc": "^2.2.0",
    "ember-a11y-testing": "^4.2.0",
    "ember-auto-import": "^2.4.2",
    "ember-autofocus-modifier": "^4.0.1",
    "ember-cli": "^4.4.1",
    "ember-cli-app-version": "^5.0.0",
    "ember-cli-babel": "^7.26.11",
    "ember-cli-code-coverage": "^1.0.3",
    "ember-cli-dependency-checker": "^3.3.1",
    "ember-cli-flash": "^4.0.0",
    "ember-cli-htmlbars": "^6.1.0",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sass": "^11.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-electron": "^3.1.1",
    "ember-exam": "^8.0.0",
    "ember-export-application-global": "^2.0.1",
    "ember-inline-svg": "^1.0.1",
    "ember-load-initializers": "^2.1.2",
    "ember-modifier": "^3.2.7",
    "ember-page-title": "^7.0.0",
    "ember-pollster": "https://github.com/hashicorp/ember-pollster.git#718db797382b04aca281216319885c5ff625f539",
    "ember-qunit": "^6.0.0",
    "ember-resolver": "^8.0.3",
    "ember-source": "~4.4.0",
    "ember-template-lint": "^4.14.0",
    "ember-template-lint-plugin-prettier": "^4.0.0",
    "ember-wormhole": "^0.6.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-ember": "^10.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-qunit": "^7.3.0",
    "js-bexpr": "hashicorp/js-bexpr#9b4a4b54d85eba67fdfc0990133d1518d890b1e1",
    "loader.js": "^4.7.0",
    "lodash": "4.17.21",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.30.0",
    "prettier": "^2.7.1",
    "qunit": "^2.19.1",
    "qunit-dom": "^2.0.0",
    "rose": "*",
    "sass": "^1.55.0",
    "shx": "^0.3.4",
    "sinon": "^14.0.0",
    "stylelint": "^15.10.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^7.0.1",
    "webpack": "^5.76.0"
  },
  "engines": {
    "node": "16.* || 18.*"
  },
  "ember": {
    "edition": "octane"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.hbs": "ember-template-lint --fix",
    "*.{js,scss,yaml}": "prettier --write"
  }
}
