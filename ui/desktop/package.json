{
  "name": "desktop",
  "version": "0.0.0",
  "private": true,
  "description": "Client UI for Boundary.",
  "license": "BUSL-1.1",
  "author": "HashiCorp",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "doc:toc": "doctoc README.md",
    "build": "yarn build:production && yarn build:desktop",
    "build:production": "cross-env EMBER_CLI_ELECTRON=true ember build --environment=production",
    "build:development": "ember build",
    "prebuild:desktop": "shx rm -rf electron-app/ember-dist electron-app/out && shx cp -r dist/ electron-app/ember-dist/",
    "build:desktop": "yarn prestart:desktop && yarn build:desktop:install && cd electron-app && yarn make",
    "build:desktop:install": "yarn --cwd electron-app install",
    "lint": "../../node_modules/.bin/concurrently \"npm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "../../node_modules/.bin/concurrently \"npm:lint:*:fix\" --names \"fix:\"",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sass": "stylelint '**/*.scss'",
    "lint:sass:fix": "stylelint '**/*.scss' --fix",
    "format": "../../node_modules/.bin/concurrently \"npm:format:*\" --names \"format:\"",
    "format:hbs": "prettier --write 'app/**/*.hbs'",
    "format:js": "prettier --write '{app,config,stories,tests,electron-app/src}/**/*.js' *.js",
    "format:sass": "prettier --write app/**/*.scss",
    "start": "ember serve --port 4201",
    "prestart:desktop": "cd electron-app && yarn premake",
    "start:desktop": "yarn prestart:desktop && ember electron",
    "clean:coverage": "rm -rf coverage_*",
    "pretest": "yarn clean:coverage",
    "test": "../../node_modules/.bin/concurrently \"npm:test:*\" --names \"test:\"",
    "test:ember": "cross-env COVERAGE=true ember exam --test-port 0 --split=4 --parallel=1 --random",
    "postinstall": "cd electron-app && yarn install",
    "posttest": "ember coverage-merge && yarn clean:coverage"
  },
  "dependencies": {
    "@babel/runtime": "7.12.18",
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "ember-named-blocks-polyfill": "^0.2.5",
    "lodash": "^4.17.21",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@ember/optional-features": "^2.0.0",
    "@ember/render-modifiers": "^2.0.4",
    "@ember/string": "^3.0.1",
    "@ember/test-helpers": "^4.0.4",
    "@embroider/macros": "^1.16.9",
    "@faker-js/faker": "^8.0.2",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "babel-loader": "^9.2.1",
    "broccoli-asset-rev": "^3.0.0",
    "core": "*",
    "cross-env": "^7.0.3",
    "doctoc": "^2.2.0",
    "ember-a11y-testing": "^7.0.0",
    "ember-auto-import": "^2.8.1",
    "ember-cli": "^5.12.0",
    "ember-cli-babel": "^8.2.0",
    "ember-cli-code-coverage": "^1.0.3",
    "ember-cli-dependency-checker": "^3.3.2",
    "ember-cli-flash": "^4.0.0",
    "ember-cli-htmlbars": "^6.2.0",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sass": "^11.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-electron": "^4.2.2",
    "ember-exam": "^8.0.0",
    "ember-inline-svg": "^1.0.1",
    "ember-load-initializers": "^2.1.2",
    "ember-modifier": "^4.1.0",
    "ember-page-title": "^7.0.0",
    "ember-pollster": "https://github.com/hashicorp/ember-pollster.git#605d82e986d829b098667e4a5e221877a4ee4ac8",
    "ember-qunit": "^8.1.0",
    "ember-resolver": "^10.0.0",
    "ember-source": "~4.12.0",
    "ember-template-lint": "^5.7.2",
    "ember-template-lint-plugin-prettier": "^5.0.0",
    "ember-wormhole": "^0.6.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-ember": "^11.11.1",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-qunit": "^8.0.1",
    "js-bexpr": "hashicorp/js-bexpr#9b4a4b54d85eba67fdfc0990133d1518d890b1e1",
    "loader.js": "^4.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.0",
    "qunit": "^2.22.0",
    "qunit-dom": "^3.2.1",
    "rose": "*",
    "sass": "^1.69.5",
    "shx": "^0.3.4",
    "sinon": "^19.0.2",
    "stylelint": "^15.10.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard": "^32.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "tracked-built-ins": "^3.1.1",
    "webpack": "^5.94.0"
  },
  "engines": {
    "node": "20.* || 22.*"
  },
  "ember": {
    "edition": "octane"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.hbs": "ember-template-lint --fix",
    "*.{scss,yaml}": "prettier --write"
  }
}
